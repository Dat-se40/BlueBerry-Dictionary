<Window x:Class="BlueBerryDictionary.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Login - BlueBerry Dictionary"
        WindowStartupLocation="CenterOwner"
        Height="600" Width="550"
        Background="Transparent">

    <Window.Resources>
        <!-- Shared Login Button Style -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SearchBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <Grid>
                                <!-- Button Content -->
                                <ContentPresenter x:Name="ButtonContent"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>

                                <!-- Loading Spinner -->
                                <Border x:Name="LoadingSpinner"
                                        Width="20" Height="20"
                                        Visibility="Collapsed">
                                    <Border.RenderTransform>
                                        <RotateTransform x:Name="SpinnerRotate" CenterX="10" CenterY="10"/>
                                    </Border.RenderTransform>
                                    <Ellipse Stroke="{TemplateBinding Foreground}"
                                             StrokeThickness="3"
                                             StrokeDashArray="15 5"/>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ButtonColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                             To="-3" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                             To="0" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Loading State - Gmail -->
                            <DataTrigger Binding="{Binding IsGmailLoading}" Value="True">
                                <Setter TargetName="ButtonContent" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="LoadingSpinner" Property="Visibility" Value="Visible"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                             Storyboard.TargetProperty="Angle"
                                                             From="0" To="360"
                                                             Duration="0:0:0.8"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>

                            <!-- Loading State - Guest -->
                            <DataTrigger Binding="{Binding IsGuestLoading}" Value="True">
                                <Setter TargetName="ButtonContent" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="LoadingSpinner" Property="Visibility" Value="Visible"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                             Storyboard.TargetProperty="Angle"
                                                             From="0" To="360"
                                                             Duration="0:0:0.8"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Login Card -->
        <Border Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="2"
                CornerRadius="24"
                Padding="50,40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" ShadowDepth="10" Opacity="0.2" Color="#1A2D6D"/>
            </Border.Effect>

            <StackPanel>

                <!-- ================================= -->
                <!-- HEADER SECTION -->
                <!-- ================================= -->

                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40">

                    <!-- Logo -->
                    <Border Width="100" Height="100"
                            CornerRadius="50"
                            Margin="0,0,0,25"
                            HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.3" Color="#2D4ACC"/>
                        </Border.Effect>

                        <!-- Logo Image -->
                        <Image Name="LogoImg"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                            <Image.Clip>
                                <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
                            </Image.Clip>
                        </Image>
                    </Border>

                    <!-- Welcome Text -->
                    <TextBlock Text="Welcome Back!"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextColor}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Choose how you want to continue"
                               FontSize="17"
                               FontWeight="Medium"
                               Foreground="{DynamicResource ButtonColor}"
                               Opacity="0.9"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- ================================= -->
                <!-- BUTTONS SECTION -->
                <!-- ================================= -->

                <StackPanel Margin="0,0,0,20">

                    <!-- Gmail Login Button -->
                    <Button x:Name="GmailLoginBtn"
                            Style="{StaticResource LoginButtonStyle}"
                            Margin="0,0,0,15"
                            Command="{Binding LoginWithGmailCommand}">
                        <StackPanel Orientation="Horizontal">
                            <!-- Google Icon -->
                            <TextBlock Text="G"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Margin="0,0,12,0">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#4285F4" Offset="0"/>
                                        <GradientStop Color="#34A853" Offset="0.33"/>
                                        <GradientStop Color="#FBBC05" Offset="0.66"/>
                                        <GradientStop Color="#EA4335" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                            </TextBlock>
                            <TextBlock Text="Continue with Google"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Divider -->
                    <Grid Margin="0,20,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Line -->
                        <Rectangle Grid.Column="0" Height="1" Opacity="0.3">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="Transparent" Offset="0"/>
                                    <GradientStop Color="{Binding Source={StaticResource BorderColor}, Path=Color}" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>

                        <!-- OR Text -->
                        <Border Grid.Column="1"
                                Background="{DynamicResource CardBackground}"
                                Padding="15,0">
                            <TextBlock Text="OR"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#94A3B8"/>
                        </Border>

                        <!-- Right Line -->
                        <Rectangle Grid.Column="2" Height="1" Opacity="0.3">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="{Binding Source={StaticResource BorderColor}, Path=Color}" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>

                    <!-- Guest Mode Button -->
                    <Button x:Name="GuestBtn"
                            Style="{StaticResource LoginButtonStyle}"
                            Command="{Binding ContinueAsGuestCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" FontSize="24" Margin="0,0,12,0"/>
                            <TextBlock Text="Continue as Guest" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>