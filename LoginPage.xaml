<Window x:Class="BlueBerryDictionary.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Login - BlueBerry Dictionary"
        WindowStartupLocation="CenterOwner"
        Height="600" Width="550"
        Background="Transparent">

    <Grid>
        <!-- Login Card (không có background ngoài) -->
        <Border Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="2"
                CornerRadius="24"
                Padding="50,40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" ShadowDepth="10" Opacity="0.2" Color="#1A2D6D"/>
            </Border.Effect>

            <StackPanel>

                <!-- ================================= -->
                <!-- HEADER SECTION -->
                <!-- ================================= -->

                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,40">

                    <!-- Logo -->
                    <Border Width="100" Height="100"
                            CornerRadius="50"
                            Margin="0,0,0,25"
                            HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.3" Color="#2D4ACC"/>
                        </Border.Effect>

                        <!-- Logo Image -->
                        <Image Name="LogoImg"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                            <Image.Clip>
                                <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
                            </Image.Clip>
                        </Image>
                    </Border>

                    <!-- Welcome Text -->
                    <TextBlock Text="Welcome Back!"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextColor}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Choose how you want to continue"
                               FontSize="17"
                               FontWeight="Medium"
                               Foreground="{DynamicResource ButtonColor}"
                               Opacity="0.9"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- ================================= -->
                <!-- BUTTONS SECTION -->
                <!-- ================================= -->

                <StackPanel Margin="0,0,0,20">

                    <!-- Gmail Login Button -->
                    <Button x:Name="GmailLoginBtn"
                            Margin="0,0,0,15"
                            Style="{StaticResource LoginButtonStyle}"
                            Command="{Binding LoginWithGmailCommand}">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <Image Source="/Resources/Image/google.png"
                                   Width="24" Height="24"
                                   Margin="0,0,12,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Continue with Google"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>



                    <!-- Divider -->
                    <Grid Margin="0,20,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Line -->
                        <Rectangle Grid.Column="0" Height="1" Opacity="0.3">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="Transparent" Offset="0"/>
                                    <GradientStop Color="{Binding Source={StaticResource BorderColor}, Path=Color}" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>

                        <!-- OR Text -->
                        <Border Grid.Column="1"
                                Background="{DynamicResource CardBackground}"
                                Padding="15,0">
                            <TextBlock Text="OR"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#94A3B8"/>
                        </Border>

                        <!-- Right Line -->
                        <Rectangle Grid.Column="2" Height="1" Opacity="0.3">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="{Binding Source={StaticResource BorderColor}, Path=Color}" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>

                    <!-- Guest Mode Button -->
                    <Button x:Name="GuestBtn"
                            Style="{StaticResource LoginButtonStyle}"
                            Command="{Binding ContinueAsGuestCommand}">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock Text="👤" FontSize="24" Margin="0,0,12,0"/>
                            <TextBlock Text="Continue as Guest" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
