<Window x:Class="BlueBerryDictionary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlueBerryDictionary"
        xmlns:vm="clr-namespace:BlueBerryDictionary.ViewModels"
        mc:Ignorable="d"
        Title="English Dictionary"
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}">
    <Grid>
        <!-- Overlay cho Sidebar -->
        <Border x:Name="Overlay"
                Background="#80000000"
                Visibility="Collapsed"
                MouseDown="Overlay_MouseDown"
                Panel.ZIndex="99"/>

        <!-- Main Layout -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Navbar -->
                <RowDefinition Height="*"/>
                <!-- Content (Frame) -->
            </Grid.RowDefinitions>

            <!-- ================================= -->
            <!-- NAVBAR -->
            <!-- ================================= -->
            <Border Grid.Row="0"
                    Background="{DynamicResource NavbarBackground}"
                    Padding="15"
                    Effect="{StaticResource NavbarShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Hamburger -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Back -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Forward -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Reload -->
                        <ColumnDefinition Width="*"/>
                        <!-- Search -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Theme Toggle -->
                    </Grid.ColumnDefinitions>

                    <!-- Hamburger Button -->
                    <Button x:Name="HamburgerBtn"
                            Grid.Column="0"
                            Style="{StaticResource HamburgerButtonStyle}"
                            Click="HamburgerBtn_Click"
                            Margin="0,0,10,0"/>

                    <!-- Back Button -->
                    <Button x:Name="BackBtn"
                            Grid.Column="1"
                            Style="{StaticResource NavButtonStyle}"
                            Click="BackBtn_Click"
                            IsEnabled="False"
                            ToolTip="Quay lại"
                            Margin="0,0,8,0">
                        <TextBlock Text="◀" FontSize="16" FontWeight="Bold"/>
                    </Button>

                    <!-- Forward Button -->
                    <Button x:Name="ForwardBtn"
                            Grid.Column="2"
                            Style="{StaticResource NavButtonStyle}"
                            Click="ForwardBtn_Click"
                            IsEnabled="False"
                            ToolTip="Tiến tới"
                            Margin="0,0,8,0">
                        <TextBlock Text="▶" FontSize="16" FontWeight="Bold"/>
                    </Button>

                    <!-- Reload Button -->
                    <Button x:Name="ReloadBtn"
                            Grid.Column="3"
                            Style="{StaticResource NavButtonStyle}"
                            Click="ReloadBtn_Click"
                            ToolTip="Tải lại"
                            Margin="0,0,20,0">
                        <TextBlock x:Name="ReloadIcon" Text="🔄" FontSize="16"/>
                    </Button>

                    <!-- Search Container - ĐỔI THÀNH GRID -->
                    <Grid Grid.Column="4"
                          MaxWidth="700"
                          HorizontalAlignment="Stretch"
                          Margin="20,0">

                        <!-- Border chứa Search Input -->
                        <Border Background="{DynamicResource SearchBackground}"
                                BorderBrush="{DynamicResource SearchBorder}"
                                BorderThickness="2"
                                CornerRadius="25"
                                Padding="15,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Search Icon -->
                                <TextBlock Grid.Column="0"
                                           Text="🔍"
                                           FontSize="18"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>

                                <!-- Search Input -->
                                <TextBox x:Name="SearchInput"
                                         Grid.Column="1"
                                         Style="{StaticResource SearchTextBoxStyle}"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         GotFocus="SearchInput_GotFocus"
                                         LostFocus="SearchInput_LostFocus"
                                         KeyDown="SearchInput_KeyDown"/>

                                <!-- Search Button -->
                                <Button x:Name="SearchBtn"  
                                        Grid.Column="2"
                                        Content="{Binding SearchButtonText}"
                                        Style="{StaticResource SearchButtonStyle}"
                                        Command="{Binding ExcuteSearchAndNavigateCommand}"
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Popup Suggestions  -->
                        <Popup x:Name="SuggestionsPopup"
                               PlacementTarget="{Binding ElementName=SearchInput}"
                               Placement="Bottom"
                               Width="{Binding ElementName=SearchInput, Path=ActualWidth}"
                               MaxHeight="300"
                               IsOpen="{Binding IsSuggestionsOpen, Mode=TwoWay}"
                               StaysOpen="False"
                               AllowsTransparency="True"
                               PopupAnimation="Slide">
                              
                            <Border Background="White"
                                    BorderBrush="{DynamicResource BorderColor}"
                                    BorderThickness="2"
                                    CornerRadius="0,0,12,12"
                                    Padding="0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10"
                                                      ShadowDepth="2"
                                                      Opacity="0.3"
                                                      Color="#5B7FFF"/>
                                </Border.Effect>

                                <!-- Suggestions List -->
                                <ListBox x:Name="SuggestionsList"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         ItemsSource="{Binding Suggestions}"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         MouseDown="SuggestionsList_MouseDown"
                                         SelectionChanged="SuggestionsList_SelectionChanged"
                                         SelectionMode="Single">
                                        
                                    <!-- ListBox Item Style -->
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="15,12"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border Background="{TemplateBinding Background}"
                                                                Padding="{TemplateBinding Padding}"
                                                                BorderThickness="0,0,0,1"
                                                                BorderBrush="#E8F1FF">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Search Icon -->
                                                                <TextBlock Grid.Column="0"
                                                                           Text="🔍"
                                                                           FontSize="14"
                                                                           VerticalAlignment="Center"
                                                                           Margin="0,0,10,0"
                                                                           Opacity="0.6"/>

                                                                <!-- Word Text -->
                                                                <TextBlock Grid.Column="1"
                                                                           Text="{Binding}"
                                                                           FontSize="14"
                                                                           VerticalAlignment="Center"
                                                                           Foreground="{DynamicResource TextColor}"/>
                                                            </Grid>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E8F1FF"/>
                                                            </Trigger>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="Background" Value="#D1E3FF"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </Border>
                        </Popup>
                    </Grid>

                    <!-- Theme Toggle -->
                    <Border x:Name="ThemeToggle"
                            Grid.Column="5"
                            Width="70"
                            Height="34"
                            Background="{DynamicResource ThemeToggleBackground}"
                            CornerRadius="17"
                            Cursor="Hand"
                            MouseDown="ThemeToggle_MouseDown">
                        <Canvas>
                            <Border x:Name="ThemeSlider"
                                    Width="28"
                                    Height="28"
                                    Background="{DynamicResource ThemeSliderBackground}"
                                    CornerRadius="14"
                                    Canvas.Left="3"
                                    Canvas.Top="3">
                                <TextBlock x:Name="ThemeIcon"
                                           Text="🌙"
                                           FontSize="16"
                                           Foreground="{DynamicResource ThemeIconColor}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Canvas>
                    </Border>
                </Grid>
            </Border>

            <!-- ================================= -->
            <!-- CONTENT FRAME -->
            <!-- ================================= -->
            <Frame x:Name="MainFrame"
                   Grid.Row="1"
                   NavigationUIVisibility="Hidden"
                   Navigated="MainFrame_Navigated"/>
        </Grid>

        <!-- ================================= -->
        <!-- SIDEBAR -->
        <!-- ================================= -->
        <Border x:Name="Sidebar"
                Width="280"
                HorizontalAlignment="Left"
                Background="{DynamicResource SidebarBackground}"
                Panel.ZIndex="100"
                Effect="{StaticResource SidebarShadow}">
            <Border.RenderTransform>
                <TranslateTransform X="-280"/>
            </Border.RenderTransform>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Sidebar Header -->
                <Border Grid.Row="0"
                        Background="{DynamicResource NavbarBackground}"
                        Padding="25">
                    <StackPanel>
                        <TextBlock Text="📖 Dictionary"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Quick Access Menu"
                                   FontSize="12"
                                   Foreground="White"
                                   Opacity="0.9"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Sidebar Menu -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20,0,0">
                        <!-- Trang chủ -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Click="SidebarItem_Click"
                                Tag="Home">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏠" FontSize="20" Margin="0,0,15,0"/>
                                <TextBlock Text="Home" FontSize="15"/>
                            </StackPanel>
                        </Button>

                        <!-- Lịch sử -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Click="SidebarItem_Click"
                                Tag="History">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🕐" FontSize="20" Margin="0,0,15,0"/>
                                <TextBlock Text="History" FontSize="15"/>
                            </StackPanel>
                        </Button>

                        <!-- Yêu thích -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Click="SidebarItem_Click"
                                Tag="Favourite">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⭐" FontSize="20" Margin="0,0,15,0"/>
                                <TextBlock Text="Favorite" FontSize="15"/>
                            </StackPanel>
                        </Button>

                        <!-- Bộ sưu tập -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Click="SidebarItem_Click"
                                Tag="MyWords">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📚" FontSize="20" Margin="0,0,15,0"/>
                                <TextBlock Text="My Words" FontSize="15"/>
                            </StackPanel>
                        </Button>

                        <!-- Trò chơi -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Click="SidebarItem_Click"
                                Tag="Game">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎮" FontSize="20" Margin="0,0,15,0"/>
                                <TextBlock Text="Game" FontSize="15"/>
                            </StackPanel>
                        </Button>

                        <!-- Offline -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Click="SidebarItem_Click"
                                Tag="Offline">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" FontSize="20" Margin="0,0,15,0"/>
                                <TextBlock Text="Offline mode" FontSize="15"/>
                            </StackPanel>
                        </Button>

                        <!-- Tài khoản -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Click="SidebarItem_Click"
                                Tag="Account">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤" FontSize="20" Margin="0,0,15,0"/>
                                <TextBlock Text="Account" FontSize="15"/>
                            </StackPanel>
                        </Button>

                        <!-- Cài đặt -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Click="SidebarItem_Click"
                                Tag="Setting">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="20" Margin="0,0,15,0"/>
                                <TextBlock Text="Setting" FontSize="15"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>