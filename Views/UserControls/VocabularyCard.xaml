<UserControl x:Class="BlueBerryDictionary.Views.UserControls.VocabularyCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BlueBerryDictionary.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border Style="{StaticResource WordCardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Card Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Word Info -->
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="{Binding Word, ElementName=vocabularyCardControl}" 
                                   FontSize="25" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,12,0"/>
                        <Border Background="{DynamicResource ToolButtonActive}"
                                CornerRadius="12"
                                Padding="12,4">
                            <TextBlock Text="{Binding WordType, ElementName=vocabularyCardControl}" 
                                       FontSize="11" 
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                    </StackPanel>
                    
                    <Border Background="{DynamicResource WordItemBackground}"
                            CornerRadius="8"
                            Padding="12,6"
                            HorizontalAlignment="Left">
                        <TextBlock Text="{Binding Pronunciation, ElementName=vocabularyCardControl}" 
                                   FontFamily="Courier New"
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource ButtonColor}"/>
                    </Border>
                </StackPanel>
                
                <!-- Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource CardActionButtonStyle}" 
                            ToolTip="Edit"
                            Command="{Binding EditCommand, ElementName=vocabularyCardControl}">
                        <TextBlock Text="✏️" FontSize="16"/>
                    </Button>
                    <Button Style="{StaticResource CardActionButtonStyle}" 
                            Margin="8,0,0,0" 
                            ToolTip="Delete"
                            Command="{Binding DeleteCommand, ElementName=vocabularyCardControl}">
                        <TextBlock Text="🗑️" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- Card Body -->
            <StackPanel Grid.Row="1" Margin="0,15,0,15">
                <TextBlock TextWrapping="Wrap" LineHeight="27">
                    <Run Text="Nghĩa:" FontWeight="Bold" Foreground="{DynamicResource TextColor}"/>
                    <Run Text="{Binding Meaning, ElementName=vocabularyCardControl, Mode=OneWay}" 
                         Foreground="{DynamicResource TextColor}"/>
                </TextBlock>

                <Border BorderBrush="{DynamicResource TextColor}"
                        BorderThickness="3,0,0,0"
                        Padding="15,0,0,0"
                        Margin="0,12,0,0">
                    <TextBlock Text="{Binding Example, ElementName=vocabularyCardControl}" 
                               FontStyle="Italic" 
                               Foreground="{DynamicResource TextColor}"
                               Opacity="0.9"
                               FontSize="15"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
            
            <!-- Card Footer -->
            <ItemsControl Grid.Row="2" ItemsSource="{Binding Tags, ElementName=vocabularyCardControl}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource WordItemBackground}"
                                CornerRadius="15"
                                Padding="14,6"
                                Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding Name}" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextColor}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>
