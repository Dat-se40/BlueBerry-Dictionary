<UserControl x:Class="BlueBerryDictionary.Views.UserControls.WordDefinitionCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlueBerryDictionary.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2d4acc" Offset="0"/>
            <GradientStop Color="#5b7fff" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#f8faff" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Style -->
        <Style x:Key="RoundButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                         CornerRadius="10" 
                         Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="FavCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="BorderBrush" Value="#e8f1ff"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource CardGradient}" 
            CornerRadius="15" Padding="25" Margin="10"
            BorderBrush="#e8f1ff" BorderThickness="2">
        <StackPanel>
            <!-- HEADER -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Word + POS -->
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="{Binding Word}" FontSize="24"
                                   FontWeight="Bold" Foreground="#1a2d6d"/>

                        <Border Background="{StaticResource ButtonGradient}"
                                CornerRadius="15" Padding="8,3" Margin="10,0,0,0">
                            <TextBlock Text="{Binding PartOfSpeech}"
                                       FontSize="10" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Pronounce -->
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#E8F1FF" CornerRadius="8" Padding="8,3" Margin="0,0,10,0">
                            <TextBlock Text="{Binding Region}" FontSize="11"
                                       FontWeight="Bold" Foreground="#2d4acc"/>
                        </Border>

                        <TextBlock Text="{Binding Pronunciation}"
                                   FontSize="12" FontFamily="Courier New"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- ACTION BUTTONS -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="❤️" Width="40" Height="40" 
         Background="White" Foreground="#2d4acc"
         BorderBrush="#5b7fff" BorderThickness="2" 
         Margin="3" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                     BorderBrush="{TemplateBinding BorderBrush}"
                     BorderThickness="{TemplateBinding BorderThickness}"
                     CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="💾" Width="40" Height="40" 
         Background="White" Foreground="#2d4acc"
         BorderBrush="#5b7fff" BorderThickness="2" 
         Margin="3" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                     BorderBrush="{TemplateBinding BorderBrush}"
                     BorderThickness="{TemplateBinding BorderThickness}"
                     CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="❌" Width="40" Height="40" 
         Background="White" Foreground="#dc2626"
         BorderBrush="#5b7fff" BorderThickness="2" 
         Margin="3" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                     BorderBrush="{TemplateBinding BorderBrush}"
                     BorderThickness="{TemplateBinding BorderThickness}"
                     CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- DEFINITION -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock TextWrapping="Wrap" FontSize="13"
                           LineHeight="24" Foreground="#1a2d6d" Margin="0,0,0,10">
                    <Run FontWeight="Bold">Definition:</Run>
                    <Run Text="{Binding Definition}"/>
                </TextBlock>

                <Border BorderBrush="#2d4acc" BorderThickness="3,0,0,0" Padding="15,0,0,0">
                    <StackPanel>
                        <TextBlock Text="{Binding Example1}"
                                   FontStyle="Italic" FontSize="12"
                                   Foreground="#64748b" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Example2}"
                                   FontStyle="Italic" FontSize="12"
                                   Foreground="#64748b"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- FOOTER -->
            <Border BorderBrush="#cbd5e1" BorderThickness="0,1,0,0" Padding="0,15,0,0">
                <TextBlock Text="{Binding TimeSpan}"
                           FontSize="12" Foreground="#64748b"/>
            </Border>

        </StackPanel>
    </Border>
</UserControl>
