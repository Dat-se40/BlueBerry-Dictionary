<UserControl x:Class="BlueBerryDictionary.Views.UserControls.PackageCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlueBerryDictionary.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="ActionBtn" TargetType="Button">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="2"
            CornerRadius="15"
            Margin="10">
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="{DynamicResource ButtonColor}"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" 
                                                Opacity="0.2" Color="#2D4ACC"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <TranslateTransform Y="-3"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource ToolbarBackground}"
                    CornerRadius="15,15,0,0"
                    Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Border Grid.Column="0"
                            Width="60" Height="60"
                            Background="{DynamicResource ButtonColor}"
                            CornerRadius="12"
                            Margin="0,0,15,0">
                        <TextBlock Text="{Binding Icon}"
                                  FontSize="30"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title Section -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="{Binding Name}"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="{DynamicResource TextColor}"
                                      Margin="0,0,10,0"/>
                            <Border Background="{Binding BadgeColor}"
                                    CornerRadius="10"
                                    Padding="8,3"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding BadgeText}"
                                          FontSize="10"
                                          FontWeight="Bold"
                                          Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="{Binding Description}"
                                  FontSize="13"
                                  Opacity="0.8"
                                  Foreground="{DynamicResource TextColor}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- BODY -->
            <StackPanel Grid.Row="1" Margin="10,10,10,10">
                <!-- Info Items -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="📚 Word Count:" Opacity="0.8" Foreground="{DynamicResource ButtonColor}" FontSize="17"/>
                    <TextBlock Grid.Column="1" Text="{Binding TotalItems}" 
                              FontWeight="Bold" Foreground="{DynamicResource ButtonColor}"
                               FontSize="17"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" FontSize="17" Text="📦 Size:" Opacity="0.8" Foreground="{DynamicResource ButtonColor}"/>
                    <TextBlock Grid.Column="1" Text="{Binding SizeText}" 
                              FontWeight="Bold" Foreground="{DynamicResource ButtonColor}"
                               FontSize="17"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95*"/>
                        <ColumnDefinition Width="661*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" FontSize="17" Text="📊 Level:" Opacity="0.8" Foreground="{DynamicResource ButtonColor}" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Column="2" Text="{Binding Level}" 
                              FontWeight="Bold" Foreground="{DynamicResource ButtonColor}"
                               FontSize="17"/>
                </Grid>

                <!-- Download Date (chỉ hiện nếu đã tải) -->
                <Grid Margin="0,0,0,10" 
                      Visibility="{Binding IsDownloaded, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="127*"/>
                        <ColumnDefinition Width="629*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" FontSize="17" Text="📅 Download Date:" Opacity="0.8" Foreground="{DynamicResource ButtonColor}" Grid.ColumnSpan="2"/>
                    <TextBlock Grid.Column="2" Text="{Binding DownloadDate}" 
                              FontWeight="Bold" Foreground="{DynamicResource ButtonColor}"
                               FontSize="17"/>
                </Grid>
            </StackPanel>

            <!-- FOOTER -->
            <Border Grid.Row="2" 
        BorderBrush="{DynamicResource BorderColor}"
        BorderThickness="0,2,0,0"
        Padding="15">
                <StackPanel>
                    <Grid x:Name="ActionButtons">
                        <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,16,0">

                            <!-- Nút tải full / tải info -->
                            <Button x:Name="DownloadFullButton"
                        Content="{Binding DownloadButtonText}"
                        Margin="0,0,20,0"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding DownloadPackageCommand}"/>

                            <!-- Nút mở gói / xem trước -->
                            <Button x:Name="OpenPackageButton"
                        Content="{Binding OpenButtonText}"
                        Margin="0,0,20,0"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding OpenPackageCommand}"/>

                            <!-- Nút xóa (chỉ khi đã tải) -->
                            <Button x:Name="DeletePackageButton"
                        Content="{Binding DeleteButtonText}"
                        Style="{StaticResource DangerButtonStyle}"
                        BorderThickness="2"
                        Command="{Binding DeletePackageCommand}"
                        Visibility="{Binding IsDownloaded,
                                             Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
