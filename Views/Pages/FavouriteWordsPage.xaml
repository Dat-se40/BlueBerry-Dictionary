<local:WordListPageBase x:Class="BlueBerryDictionary.Views.Pages.FavouriteWordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlueBerryDictionary.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FavouriteWordsPage">


    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
        <StackPanel>
            <!-- PAGE HEADER -->
            <Border Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="2"
                    CornerRadius="20"
                    Padding="40,30"
                    Margin="0,0,0,30">
                <StackPanel>
                    <!-- Header Top -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="⭐" FontSize="48" VerticalAlignment="Center" Margin="0,0,15,0" />
                            <TextBlock Text="Favourite Words"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextColor}"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <Button Grid.Column="1"
                                Style="{StaticResource ClearButtonStyle}"
                                VerticalAlignment="Bottom"
                                Name="btnDeleteAll" Margin="0,0,0,7"
                             Click="btnDeleteAll_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗑️" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="Xóa tất cả" />
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- FILTERS -->
                    <WrapPanel Grid.Column="0" HorizontalAlignment="Left">
                        <Button Style="{StaticResource FilterChipStyle}" Tag="All" Click="Reload">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔧" FontSize="14" Margin="0,0,8,0" />
                                <TextBlock Text="Tất cả" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource FilterChipStyle}" Click="FilterByPartOfSpeed" Tag="noun">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📝" FontSize="14" Margin="0,0,8,0" />
                                <TextBlock Text="Danh từ" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource FilterChipStyle}" Click="FilterByPartOfSpeed" Tag="verb">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚡" FontSize="14" Margin="0,0,8,0" />
                                <TextBlock Text="Động từ" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource FilterChipStyle}" Click="FilterByPartOfSpeed" Tag="adjective">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💎" FontSize="14" Margin="0,0,8,0" />
                                <TextBlock Text="Tính từ" />
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>
            <!-- Content-->
            <UniformGrid Columns="3" Margin="0,10,0,10" Name="mainContent">

            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</local:WordListPageBase>
