                        <StackPanel Margin="0,0,0,20">
                            <TextBlock TextWrapping="Wrap" FontSize="13" 
                                       LineHeight="24" Foreground="#1a2d6d" Margin="0,0,0,10">
                                <Run FontWeight="Bold">Nghĩa:</Run> 
                                <Run>Kiến thức, sự hiểu biết - Thông tin và kỹ năng có được thông qua kinh nghiệm hoặc giáo dục</Run>
                            </TextBlock>

                            <Border BorderBrush="#2d4acc" BorderThickness="3,0,0,0" Padding="15,0,0,0">
                                <StackPanel>
                                    <TextBlock Text='"She has extensive knowledge of computer science."' 
                                               FontStyle="Italic" FontSize="12" 
                                               Foreground="#64748b" Margin="0,0,0,5"/>
                                    <TextBlock Text='"His knowledge of history is impressive."' 
                                               FontStyle="Italic" FontSize="12" 
                                               Foreground="#64748b"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <Border BorderBrush="#cbd5e1" BorderThickness="0,1,0,0" Padding="0,15,0,0">
                            <TextBlock Text="📅 1 tuần trước" FontSize="12" 
                                       Foreground="#64748b"/>
                        </Border>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
