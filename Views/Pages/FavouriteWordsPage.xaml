                                        <TextBlock Text="ADJ" FontSize="10" 
                                                   FontWeight="Bold" Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#E8F1FF" CornerRadius="8" Padding="8,3" Margin="0,0,10,0">
