<Page x:Class="DictionaryApp.FavouriteWordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:uc="clr-namespace:BlueBerryDictionary.Views.UserControls"
      Background="{DynamicResource MainBackground}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/ButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <!-- MAIN CONTENT -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
        <StackPanel>
            <!-- PAGE HEADER -->
            <Border Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="2"
                    CornerRadius="20"
                    Padding="40,30"
                    Margin="0,0,0,30">
                <StackPanel>
                    <!-- Header Top -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="⭐" FontSize="48" VerticalAlignment="Center" Margin="0,0,15,0" />
                            <TextBlock Text="Favourite Words"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextColor}"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <Button Grid.Column="1"
                                Style="{StaticResource ClearButtonStyle}"
                                VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗑️" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="Xóa tất cả" />
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- FILTERS -->
                    <WrapPanel Grid.Column="0" HorizontalAlignment="Left">
                        <Button Style="{StaticResource FilterChipStyle}" Tag="Active">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔧" FontSize="14" Margin="0,0,8,0" />
                                <TextBlock Text="Tất cả (3)" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource FilterChipStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📝" FontSize="14" Margin="0,0,8,0" />
                                <TextBlock Text="Danh từ" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource FilterChipStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚡" FontSize="14" Margin="0,0,8,0" />
                                <TextBlock Text="Động từ" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource FilterChipStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💎" FontSize="14" Margin="0,0,8,0" />
                                <TextBlock Text="Tính từ" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource FilterChipStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💎"
                                           FontSize="14"
                                           Margin="0,0,8,0" />
                                <TextBlock Text="Gần đây" />
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- FAV CARDS GRID -->
            <UniformGrid x:Name="FavGrid" Columns="3" Margin="0,30,0,0">

                <!-- Card 1: Beautiful -->
                <uc:WordDefinitionCard
                    Word="Beautiful"
                    PartOfSpeech="ADJ"
                    Region="US"
                    Pronunciation="/ˈbjuː.tɪ.fəl/"
                    Definition="Đẹp, xinh đẹp, tuyệt đẹp - Có vẻ đẹp làm hài lòng các giác quan hoặc tâm trí"
                    Example1='"She wore a beautiful dress to the party."'
                    Example2='"The sunset was absolutely beautiful tonight."'
                    TimeStamp="📅 2 ngày trước" />

                <!-- Card 2: Achieve -->
                <uc:WordDefinitionCard
                    Word="Achieve"
                    PartOfSpeech="VERB"
                    Region="US"
                    Pronunciation="/əˈtʃiːv/"
                    Definition="Đạt được, giành được - Thành công trong việc đạt được điều gì đó qua nỗ lực"
                    Example1='"She achieved her goal of becoming a doctor."'
                    Example2='"We finally achieved what we set out to do."'
                    TimeStamp="📅 5 ngày trước" />

                <!-- Card 3: Knowledge -->
                <uc:WordDefinitionCard
                    Word="Knowledge"
                    PartOfSpeech="NOUN"
                    Region="US"
                    Pronunciation="/ˈnɑː.lɪdʒ/"
                    Definition="Kiến thức, sự hiểu biết - Thông tin và kỹ năng có được thông qua kinh nghiệm hoặc giáo dục"
                    Example1='"She has extensive knowledge of computer science."'
                    Example2='"His knowledge of history is impressive."'
                    TimeStamp="📅 1 tuần trước" />

            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Page>