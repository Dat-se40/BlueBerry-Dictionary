<Page x:Class="BlueBerryDictionary.Pages.MyWordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:uc="clr-namespace:BlueBerryDictionary.Views.UserControls"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1200"
      Background="{DynamicResource MainBackground}">

    <Page.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ToolButtonActive}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="24,12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SearchBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource ButtonColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="24,12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource WordItemHover}" />
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Tag Dropdown Button Style -->
        <Style x:Key="TagDropdownButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{DynamicResource SearchBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource ButtonColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource WordItemHover}" />
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Alphabet style -->
        <Style x:Key="AlphabetButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="{DynamicResource SearchBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource TextColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource WordItemHover}" />
                </Trigger>
                <Trigger Property="Tag" Value="Active">
                    <Setter Property="Background" Value="{DynamicResource ToolButtonActive}" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="BorderBrush" Value="{DynamicResource ToolButtonActive}" />
                </Trigger>
                <Trigger Property="Tag" Value="Inactive">
                    <Setter Property="Opacity" Value="0.4" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- ================================= -->
            <!-- PAGE HEADER -->
            <!-- ================================= -->
            <Border Grid.Row="0"
                    Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="2"
                    CornerRadius="20"
                    Padding="40,30"
                    Margin="0,0,0,30">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.1" Color="Black" />
                </Border.Effect>

                <StackPanel>
                    <!-- Header Top -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Title Section -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="📚"
                                       FontSize="48"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0" />
                            <TextBlock Text="My Words"
                                       FontSize="40"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextColor}"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <!-- Header Actions -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏷️" FontSize="16" Margin="0,0,8,0" />
                                    <TextBlock Text="Tạo nhãn mới" />
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource PrimaryButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" FontSize="16" Margin="0,0,8,0" />
                                    <TextBlock Text="Thêm từ mới" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Stats Bar -->
                    <Border Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="2"
                            CornerRadius="15"
                            Padding="20"
                            Margin="0,0,0,25">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Stat 1 -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="3"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource ButtonColor}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="Tổng số từ"
                                           FontSize="15"
                                           Foreground="{DynamicResource TextColor}"
                                           Opacity="0.8"
                                           HorizontalAlignment="Center" />
                            </StackPanel>

                            <!-- Stat 2 -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="3"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource ButtonColor}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="Nhãn"
                                           FontSize="15"
                                           Foreground="{DynamicResource TextColor}"
                                           Opacity="0.8"
                                           HorizontalAlignment="Center" />
                            </StackPanel>

                            <!-- Stat 3 -->
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="2"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource ButtonColor}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="Tuần này"
                                           FontSize="15"
                                           Foreground="{DynamicResource TextColor}"
                                           Opacity="0.8"
                                           HorizontalAlignment="Center" />
                            </StackPanel>

                            <!-- Stat 4 -->
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="3"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource ButtonColor}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="Tháng này"
                                           FontSize="15"
                                           Foreground="{DynamicResource TextColor}"
                                           Opacity="0.8"
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Filters & Tags Row -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Filters Section -->
                        <WrapPanel Grid.Column="0" HorizontalAlignment="Left">
                            <Button Style="{StaticResource FilterChipStyle}" Tag="Active">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔧" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Tất cả (3)" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource FilterChipStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📝" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Danh từ" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource FilterChipStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚡" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Động từ" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource FilterChipStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="💎" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Tính từ" />
                                </StackPanel>
                            </Button>
                        </WrapPanel>

                        <!-- Dropdowns Section -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <!-- Alphabet Filter Dropdown -->
                            <Grid Margin="0,0,10,0">
                                <ToggleButton x:Name="AlphabetDropdownToggle"
                                              Style="{StaticResource TagDropdownButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔤" FontSize="14" Margin="0,0,8,0" />
                                        <TextBlock Text="Lọc theo chữ cái" Margin="0,0,8,0" />
                                        <TextBlock Text="▼" FontSize="12" />
                                    </StackPanel>
                                </ToggleButton>

                                <Popup IsOpen="{Binding IsChecked, ElementName=AlphabetDropdownToggle}"
                                       PlacementTarget="{Binding ElementName=AlphabetDropdownToggle}"
                                       Placement="Bottom"
                                       StaysOpen="False"
                                       AllowsTransparency="True">
                                    <Border Background="{DynamicResource SearchBackground}"
                                            BorderBrush="{DynamicResource BorderColor}"
                                            BorderThickness="2"
                                            CornerRadius="15"
                                            Padding="20">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="24" ShadowDepth="8" Opacity="0.2"
                                                              Color="Black" />
                                        </Border.Effect>

                                        <StackPanel>
                                            <TextBlock Text="Chọn chữ cái"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource TextColor}"
                                                       Margin="0,0,0,15" />

                                            <UniformGrid Columns="7" Width="380">
                                                <!-- Alphabet Buttons -->
                                                <Button Content="All" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="Active" Click="AlphabetButton_Click" />
                                                <Button Content="A" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="A" Click="AlphabetButton_Click" />
                                                <Button Content="B" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="B" Click="AlphabetButton_Click" />
                                                <Button Content="C" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="C" Click="AlphabetButton_Click" />
                                                <Button Content="D" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="D" Click="AlphabetButton_Click" />
                                                <Button Content="E" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="E" Click="AlphabetButton_Click" />
                                                <Button Content="F" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="F" Click="AlphabetButton_Click" />
                                                <Button Content="G" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="G" Click="AlphabetButton_Click" />
                                                <Button Content="H" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="H" Click="AlphabetButton_Click" />
                                                <Button Content="I" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="I" Click="AlphabetButton_Click" />
                                                <Button Content="J" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="J" Click="AlphabetButton_Click" />
                                                <Button Content="K" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="K" Click="AlphabetButton_Click" />
                                                <Button Content="L" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="L" Click="AlphabetButton_Click" />
                                                <Button Content="M" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="M" Click="AlphabetButton_Click" />
                                                <Button Content="N" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="N" Click="AlphabetButton_Click" />
                                                <Button Content="O" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="O" Click="AlphabetButton_Click" />
                                                <Button Content="P" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="P" Click="AlphabetButton_Click" />
                                                <Button Content="Q" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="Q" Click="AlphabetButton_Click" />
                                                <Button Content="R" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="R" Click="AlphabetButton_Click" />
                                                <Button Content="S" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="S" Click="AlphabetButton_Click" />
                                                <Button Content="T" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="T" Click="AlphabetButton_Click" />
                                                <Button Content="U" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="U" Click="AlphabetButton_Click" />
                                                <Button Content="V" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="V" Click="AlphabetButton_Click" />
                                                <Button Content="W" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="W" Click="AlphabetButton_Click" />
                                                <Button Content="X" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="X" Click="AlphabetButton_Click" />
                                                <Button Content="Y" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="Y" Click="AlphabetButton_Click" />
                                                <Button Content="Z" Style="{StaticResource AlphabetButtonStyle}"
                                                        Tag="Z" Click="AlphabetButton_Click" />
                                                <!-- <Button Visibility="Hidden" IsEnabled="False"/> -->
                                            </UniformGrid>
                                        </StackPanel>
                                    </Border>
                                </Popup>
                            </Grid>

                            <!-- Tags Dropdown -->
                            <Grid>
                                <ToggleButton x:Name="TagsDropdownToggle"
                                              Style="{StaticResource TagDropdownButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🏷️" FontSize="14" Margin="0,0,8,0" />
                                        <TextBlock Text="Lọc theo nhãn" Margin="0,0,8,0" />
                                        <TextBlock Text="▼" FontSize="12" />
                                    </StackPanel>
                                </ToggleButton>

                                <Popup IsOpen="{Binding IsChecked, ElementName=TagsDropdownToggle}"
                                       PlacementTarget="{Binding ElementName=TagsDropdownToggle}"
                                       Placement="Bottom"
                                       StaysOpen="False"
                                       AllowsTransparency="True">
                                    <Border Background="{DynamicResource SearchBackground}"
                                            BorderBrush="{DynamicResource BorderColor}"
                                            BorderThickness="2"
                                            CornerRadius="15"
                                            Padding="15"
                                            Width="320"
                                            MaxHeight="400">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="24" ShadowDepth="8" Opacity="0.2"
                                                              Color="Black" />
                                        </Border.Effect>

                                        <StackPanel>
                                            <!-- Search Box -->
                                            <TextBox Text="Tìm nhãn..."
                                                     Background="{DynamicResource MainBackground}"
                                                     BorderBrush="{DynamicResource BorderColor}"
                                                     BorderThickness="2"
                                                     Padding="15,10"
                                                     FontSize="14"
                                                     Margin="0,0,0,10">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="TextBox">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            CornerRadius="10"
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ScrollViewer x:Name="PART_ContentHost" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>

                                            <!-- Tags List -->
                                            <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                                <StackPanel>
                                                    <!-- Tag Item 1 -->
                                                    <Border Background="Transparent"
                                                            Padding="15,12"
                                                            Margin="0,0,0,5"
                                                            CornerRadius="10"
                                                            Cursor="Hand">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background"
                                                                                Value="{DynamicResource WordItemHover}" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0"
                                                                       Text="📚"
                                                                       FontSize="20"
                                                                       Margin="0,0,10,0"
                                                                       VerticalAlignment="Center" />

                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="Tất cả"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="{DynamicResource TextColor}"
                                                                           FontSize="14" />
                                                                <TextBlock Text="3 từ"
                                                                           FontSize="13"
                                                                           Foreground="{DynamicResource TextColor}"
                                                                           Opacity="0.7" />
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Tag Item 2 -->
                                                    <Border Background="Transparent"
                                                            Padding="15,12"
                                                            Margin="0,0,0,5"
                                                            CornerRadius="10"
                                                            Cursor="Hand">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background"
                                                                                Value="{DynamicResource WordItemHover}" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0"
                                                                       Text="🎯"
                                                                       FontSize="20"
                                                                       Margin="0,0,10,0"
                                                                       VerticalAlignment="Center" />

                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="IELTS"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="{DynamicResource TextColor}"
                                                                           FontSize="14" />
                                                                <TextBlock Text="1 từ"
                                                                           FontSize="13"
                                                                           Foreground="{DynamicResource TextColor}"
                                                                           Opacity="0.7" />
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Tag Item 3 -->
                                                    <Border Background="Transparent"
                                                            Padding="15,12"
                                                            Margin="0,0,0,5"
                                                            CornerRadius="10"
                                                            Cursor="Hand">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background"
                                                                                Value="{DynamicResource WordItemHover}" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0"
                                                                       Text="💬"
                                                                       FontSize="20"
                                                                       Margin="0,0,10,0"
                                                                       VerticalAlignment="Center" />

                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="Giao tiếp"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="{DynamicResource TextColor}"
                                                                           FontSize="14" />
                                                                <TextBlock Text="2 từ"
                                                                           FontSize="13"
                                                                           Foreground="{DynamicResource TextColor}"
                                                                           Opacity="0.7" />
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Tag Item 4 -->
                                                    <Border Background="Transparent"
                                                            Padding="15,12"
                                                            CornerRadius="10"
                                                            Cursor="Hand">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background"
                                                                                Value="{DynamicResource WordItemHover}" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0"
                                                                       Text="💼"
                                                                       FontSize="20"
                                                                       Margin="0,0,10,0"
                                                                       VerticalAlignment="Center" />

                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="Business"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="{DynamicResource TextColor}"
                                                                           FontSize="14" />
                                                                <TextBlock Text="1 từ"
                                                                           FontSize="13"
                                                                           Foreground="{DynamicResource TextColor}"
                                                                           Opacity="0.7" />
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </StackPanel>
                                            </ScrollViewer>
                                        </StackPanel>
                                    </Border>
                                </Popup>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ================================= -->
            <!-- WORDS GRID -->
            <!-- ================================= -->
            <StackPanel Grid.Row="1">
                <Border Background="Transparent"
                        Padding="15,0"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="A"
                                       FontSize="48"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource ToolButtonActive}"
                                       Margin="0,0,15,0" />
                            <TextBlock Text="(1 word)"
                                       FontSize="20"
                                       Foreground="{DynamicResource TextColor}"
                                       Opacity="0.6"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,8" />
                        </StackPanel>

                        <!-- Underline -->
                        <Border Height="3"
                                Background="{DynamicResource ToolButtonActive}"
                                CornerRadius="2"
                                HorizontalAlignment="Stretch" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>