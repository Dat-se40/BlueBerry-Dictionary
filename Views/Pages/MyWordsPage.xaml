<Page x:Class="BlueBerryDictionary.Pages.MyWordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1200"
      Background="{DynamicResource MainBackground}">

    <Page.Resources>
        <!-- Word Card Style -->
        <Style x:Key="WordCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="#FFE8F1FF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="24" ShadowDepth="8" Opacity="0.15" Color="#2D4ACC"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Filter Chip Style -->
        <Style x:Key="FilterChipStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SearchBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ToolButtonActive}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="Tag" Value="Active">
                    <Setter Property="Background" Value="{DynamicResource ToolButtonActive}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ToolButtonActive}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SearchBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource WordItemHover}"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Action Button Style -->
        <Style x:Key="CardActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SearchBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="BorderBrush" Value="#FFE8F1FF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource WordItemHover}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Tag Dropdown Button Style -->
        <Style x:Key="TagDropdownButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{DynamicResource SearchBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource WordItemHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ================================= -->
            <!-- PAGE HEADER -->
            <!-- ================================= -->
            <Border Grid.Row="0"
                    Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="2"
                    CornerRadius="20"
                    Padding="40,30"
                    Margin="0,0,0,30">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.1" Color="Black"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Header Top -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Title Section -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="📚" 
                                       FontSize="48" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,15,0"/>
                            <TextBlock Text="My Words" 
                                       FontSize="40" 
                                       FontWeight="Bold" 
                                       Foreground="{DynamicResource TextColor}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Header Actions -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏷️" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="Tạo nhãn mới"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource PrimaryButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="Thêm từ mới"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Stats Bar -->
                    <Border Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="2"
                            CornerRadius="15"
                            Padding="20"
                            Margin="0,0,0,25">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Stat 1 -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="3" 
                                           FontSize="32" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource ButtonColor}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Tổng số từ" 
                                           FontSize="15" 
                                           Foreground="{DynamicResource TextColor}"
                                           Opacity="0.8"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Stat 2 -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="3" 
                                           FontSize="32" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource ButtonColor}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Nhãn" 
                                           FontSize="15" 
                                           Foreground="{DynamicResource TextColor}"
                                           Opacity="0.8"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Stat 3 -->
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="2" 
                                           FontSize="32" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource ButtonColor}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Tuần này" 
                                           FontSize="15" 
                                           Foreground="{DynamicResource TextColor}"
                                           Opacity="0.8"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Stat 4 -->
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="3" 
                                           FontSize="32" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource ButtonColor}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Tháng này" 
                                           FontSize="15" 
                                           Foreground="{DynamicResource TextColor}"
                                           Opacity="0.8"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Filters & Tags Row -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Filters Section -->
                        <WrapPanel Grid.Column="0" HorizontalAlignment="Left">
                            <Button Style="{StaticResource FilterChipStyle}" Tag="Active">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔧" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Tất cả (3)"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource FilterChipStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📝" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Danh từ"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource FilterChipStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚡" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Động từ"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource FilterChipStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="💎" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Tính từ"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>

                        <!-- Tags Dropdown -->
                        <Grid Grid.Column="1">
                            <ToggleButton x:Name="TagsDropdownToggle" 
                                          Style="{StaticResource TagDropdownButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏷️" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Lọc theo nhãn" Margin="0,0,8,0"/>
                                    <TextBlock Text="▼" FontSize="12"/>
                                </StackPanel>
                            </ToggleButton>

                            <Popup IsOpen="{Binding IsChecked, ElementName=TagsDropdownToggle}" 
                                   PlacementTarget="{Binding ElementName=TagsDropdownToggle}"
                                   Placement="Bottom"
                                   StaysOpen="False"
                                   AllowsTransparency="True">
                                <Border Background="{DynamicResource SearchBackground}"
                                        BorderBrush="{DynamicResource BorderColor}"
                                        BorderThickness="2"
                                        CornerRadius="15"
                                        Padding="15"
                                        Width="320"
                                        MaxHeight="400">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="24" ShadowDepth="8" Opacity="0.2" Color="Black"/>
                                    </Border.Effect>

                                    <StackPanel>
                                        <!-- Search Box -->
                                        <TextBox Text="Tìm nhãn..." 
                                                 Background="{DynamicResource MainBackground}"
                                                 BorderBrush="{DynamicResource BorderColor}"
                                                 BorderThickness="2"
                                                 Padding="15,10"
                                                 FontSize="14"
                                                 Margin="0,0,0,10">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="TextBox">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="10"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>

                                        <!-- Tags List -->
                                        <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                            <StackPanel>
                                                <!-- Tag Item 1 -->
                                                <Border Background="Transparent" 
                                                        Padding="15,12" 
                                                        Margin="0,0,0,5"
                                                        CornerRadius="10"
                                                        Cursor="Hand">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource WordItemHover}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" 
                                                                   Text="📚" 
                                                                   FontSize="20" 
                                                                   Margin="0,0,10,0"
                                                                   VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="Tất cả" 
                                                                       FontWeight="SemiBold" 
                                                                       Foreground="{DynamicResource TextColor}"
                                                                       FontSize="14"/>
                                                            <TextBlock Text="3 từ" 
                                                                       FontSize="13" 
                                                                       Foreground="{DynamicResource TextColor}"
                                                                       Opacity="0.7"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>

                                                <!-- Tag Item 2 -->
                                                <Border Background="Transparent" 
                                                        Padding="15,12" 
                                                        Margin="0,0,0,5"
                                                        CornerRadius="10"
                                                        Cursor="Hand">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource WordItemHover}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" 
                                                                   Text="🎯" 
                                                                   FontSize="20" 
                                                                   Margin="0,0,10,0"
                                                                   VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="IELTS" 
                                                                       FontWeight="SemiBold" 
                                                                       Foreground="{DynamicResource TextColor}"
                                                                       FontSize="14"/>
                                                            <TextBlock Text="1 từ" 
                                                                       FontSize="13" 
                                                                       Foreground="{DynamicResource TextColor}"
                                                                       Opacity="0.7"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>

                                                <!-- Tag Item 3 -->
                                                <Border Background="Transparent" 
                                                        Padding="15,12" 
                                                        Margin="0,0,0,5"
                                                        CornerRadius="10"
                                                        Cursor="Hand">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource WordItemHover}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" 
                                                                   Text="💬" 
                                                                   FontSize="20" 
                                                                   Margin="0,0,10,0"
                                                                   VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="Giao tiếp" 
                                                                       FontWeight="SemiBold" 
                                                                       Foreground="{DynamicResource TextColor}"
                                                                       FontSize="14"/>
                                                            <TextBlock Text="2 từ" 
                                                                       FontSize="13" 
                                                                       Foreground="{DynamicResource TextColor}"
                                                                       Opacity="0.7"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>

                                                <!-- Tag Item 4 -->
                                                <Border Background="Transparent" 
                                                        Padding="15,12"
                                                        CornerRadius="10"
                                                        Cursor="Hand">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource WordItemHover}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" 
                                                                   Text="💼" 
                                                                   FontSize="20" 
                                                                   Margin="0,0,10,0"
                                                                   VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="Business" 
                                                                       FontWeight="SemiBold" 
                                                                       Foreground="{DynamicResource TextColor}"
                                                                       FontSize="14"/>
                                                            <TextBlock Text="1 từ" 
                                                                       FontSize="13" 
                                                                       Foreground="{DynamicResource TextColor}"
                                                                       Opacity="0.7"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ================================= -->
            <!-- WORDS GRID -->
            <!-- ================================= -->
            <UniformGrid Grid.Row="1" Columns="3">
                <!-- Word Card 1 - Beautiful -->
                <Border Style="{StaticResource WordCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Card Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Word Info -->
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Beautiful" 
                                               FontSize="25" 
                                               FontWeight="Bold" 
                                               Foreground="{DynamicResource TextColor}"
                                               Margin="0,0,12,0"/>
                                    <Border Background="{DynamicResource ToolButtonActive}"
                                            CornerRadius="12"
                                            Padding="12,4">
                                        <TextBlock Text="ADJ" 
                                                   FontSize="11" 
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <Border Background="{DynamicResource WordItemBackground}"
                                        CornerRadius="8"
                                        Padding="12,6"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="/ˈbjuː.tɪ.fəl/" 
                                               FontFamily="Courier New"
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource ButtonColor}"/>
                                </Border>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Style="{StaticResource CardActionButtonStyle}" ToolTip="Edit">
                                    <TextBlock Text="✏️" FontSize="16"/>
                                </Button>
                                <Button Style="{StaticResource CardActionButtonStyle}" Margin="8,0,0,0" ToolTip="Delete">
                                    <TextBlock Text="🗑️" FontSize="16"/>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Card Body -->
                        <StackPanel Grid.Row="1" Margin="0,15,0,15">
                            <TextBlock TextWrapping="Wrap" LineHeight="27">
                                <Run Text="Nghĩa:" FontWeight="Bold" Foreground="{DynamicResource TextColor}"/>
                                <Run Text="Đẹp, xinh đẹp" Foreground="{DynamicResource TextColor}"/>
                            </TextBlock>

                            <Border BorderBrush="{DynamicResource TextColor}"
                                    BorderThickness="3,0,0,0"
                                    Padding="15,0,0,0"
                                    Margin="0,12,0,0">
                                <TextBlock Text="&quot;She is beautiful&quot;" 
                                           FontStyle="Italic" 
                                           Foreground="{DynamicResource TextColor}"
                                           Opacity="0.9"
                                           FontSize="15"
                                           TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- Card Footer -->
                        <WrapPanel Grid.Row="2">
                            <Border Background="{DynamicResource WordItemBackground}"
                                    CornerRadius="15"
                                    Padding="14,6"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="💬" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Giao tiếp" 
                                               FontSize="13" 
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextColor}"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{DynamicResource WordItemBackground}"
                                    CornerRadius="15"
                                    Padding="14,6">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🎯" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="IELTS" 
                                               FontSize="13" 
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextColor}"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </Grid>
                </Border>

                <!-- Word Card 2 - Achieve -->
                <Border Style="{StaticResource WordCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Card Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Word Info -->
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Achieve" 
                                               FontSize="25" 
                                               FontWeight="Bold" 
                                               Foreground="{DynamicResource TextColor}"
                                               Margin="0,0,12,0"/>
                                    <Border Background="{DynamicResource ToolButtonActive}"
                                            CornerRadius="12"
                                            Padding="12,4">
                                        <TextBlock Text="VERB" 
                                                   FontSize="11" 
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <Border Background="{DynamicResource WordItemBackground}"
                                        CornerRadius="8"
                                        Padding="12,6"
                                        HorizontalAlignment="Left">
