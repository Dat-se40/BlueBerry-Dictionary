<Page x:Class="BlueBerryDictionary.Views.Pages.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1200"
      Background="{DynamicResource MainBackground}">
    <Border x:Name="ScrollViewerBorder" Background="{DynamicResource MainBackground}">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource MainBackground}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FFECECEC"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="1050" Margin="30">

                    <Border Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="1"
                CornerRadius="24">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="40" ShadowDepth="10" Opacity="0.15" Color="#1A2D6D"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="320"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                        CornerRadius="24,0,0,24">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1A2D6D" Offset="0"/>
                                        <GradientStop Color="#2D4ACC" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <StackPanel VerticalAlignment="Center" Margin="20">
                                    <Grid Width="140" Height="140" Margin="0,0,0,25">
                                        <Border Width="140" Height="140"
                                    CornerRadius="70"
                                    BorderThickness="4"
                                    BorderBrush="White">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.3" Color="#101830"/>
                                            </Border.Effect>

                                            <Border CornerRadius="70">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                                                        <GradientStop Color="#20FFFFFF" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>

                                                <Grid>
                                                    <TextBlock x:Name="AvatarPlaceholder"
                                                   Text="👤"
                                                   FontSize="70"
                                                   Foreground="#CCFFFFFF"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Visibility="Visible"/>

                                                    <Image x:Name="AvatarImage"
                                               Stretch="UniformToFill"
                                               Visibility="Collapsed">
                                                        <Image.Clip>
                                                            <EllipseGeometry Center="70,70" RadiusX="70" RadiusY="70"/>
                                                        </Image.Clip>
                                                    </Image>
                                                </Grid>
                                            </Border>
                                        </Border>

                                        <Button Width="40" Height="40"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Cursor="Hand"
                                    Command="{Binding UploadAvatarCommand}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#2D4ACC" Offset="0"/>
                                                                <GradientStop Color="#5B7FFF" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                                                    <TextBlock Text="📷" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>

                                    <TextBlock Text="{Binding DisplayName}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>

                                    <TextBlock Text="{Binding Email}"
                                   FontSize="15"
                                   FontWeight="Medium"
                                   Foreground="White"
                                   Opacity="0.8"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Grid Grid.Column="1" Margin="40,30,40,30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="Thông tin cá nhân" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource TextColor}" Margin="0,0,0,20"/>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="User ID" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{DynamicResource TextColor}" Opacity="0.7"/>
                                        <TextBox Grid.Column="1" Text="{Binding UserId, Mode=OneWay}" IsReadOnly="True"
                                     Background="{DynamicResource SearchBackground}" Foreground="{DynamicResource TextColor}"
                                     BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Padding="12,10"
                                     FontSize="15" Opacity="0.7">
                                            <TextBox.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="8"/>
                                                </Style>
                                            </TextBox.Resources>
                                        </TextBox>
                                    </Grid>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Display Name" FontWeight="SemiBold" Foreground="{DynamicResource TextColor}" Margin="0,0,0,8"/>
                                            <TextBox Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" MaxLength="50"
                                         Background="{DynamicResource SearchBackground}" Foreground="{DynamicResource TextColor}"
                                         BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Padding="12,10" FontSize="15">
                                                <TextBox.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="8"/>
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                            <TextBlock Text="{Binding DisplayNameCharCount}" FontSize="11" Foreground="{DynamicResource TextColor}" Opacity="0.5" HorizontalAlignment="Right" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Nickname" FontWeight="SemiBold" Foreground="{DynamicResource TextColor}" Margin="0,0,0,8"/>
                                            <TextBox Text="{Binding Nickname, UpdateSourceTrigger=PropertyChanged}" MaxLength="30"
                                         Background="{DynamicResource SearchBackground}" Foreground="{DynamicResource TextColor}"
                                         BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Padding="12,10" FontSize="15">
                                                <TextBox.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="8"/>
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                            <TextBlock Text="{Binding NicknameCharCount}" FontSize="11" Foreground="{DynamicResource TextColor}" Opacity="0.5" HorizontalAlignment="Right" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>

                                    <StackPanel Margin="0,0,0,20">
                                        <TextBlock Text="Email Address" FontWeight="SemiBold" Foreground="{DynamicResource TextColor}" Margin="0,0,0,8"/>
                                        <TextBox Text="{Binding Email, Mode=OneWay}" IsReadOnly="True"
                                     Background="{DynamicResource SearchBackground}" Foreground="{DynamicResource TextColor}"
                                     BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Padding="12,10" FontSize="15" Opacity="0.7">
                                            <TextBox.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="8"/>
                                                </Style>
                                            </TextBox.Resources>
                                        </TextBox>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Row="1">

                                    <Border Padding="20" CornerRadius="12" Margin="0,0,0,25" BorderThickness="1" BorderBrush="{DynamicResource BorderColor}" Width="383">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#F0F7FF" Offset="0"/>
                                                <GradientStop Color="#F8F0FF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="☁️" FontSize="18" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Google Drive" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource TextColor}" Width="151" Height="25"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding SyncStatusText}" FontSize="13" Foreground="{DynamicResource ButtonColor}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Command="{Binding DownloadFromDriveCommand}" Width="40" Height="40" Margin="0,0,10,0" Cursor="Hand" ToolTip="Download Backup">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="#10B981" CornerRadius="8">
                                                                <TextBlock Text="📥" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                                <Button Command="{Binding UploadToDriveCommand}" Width="40" Height="40" Cursor="Hand" ToolTip="Upload Backup">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="#2D4ACC" CornerRadius="8">
                                                                <TextBlock Text="📤" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0" Height="50" Cursor="Hand" Command="{Binding SaveProfileCommand}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border CornerRadius="12">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#2D4ACC" Offset="0"/>
                                                                <GradientStop Color="#5B7FFF" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <TextBlock Text="💾" FontSize="18" Margin="0,0,10,0"/>
                                                            <TextBlock Text="Save Changes" FontWeight="SemiBold" Foreground="White" FontSize="16"/>
                                                        </StackPanel>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <Button Grid.Column="2" Height="50" Cursor="Hand" Command="{Binding LogoutCommand}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border CornerRadius="12" Background="#FFF1F2">
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <TextBlock Text="🚪" FontSize="18" Margin="0,0,10,0"/>
                                                            <TextBlock Text="Logout" FontWeight="SemiBold" Foreground="#EF4444" FontSize="16"/>
                                                        </StackPanel>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>
        </ScrollViewer>
    </Border>

</Page>