<local:WordListPageBase x:Class="BlueBerryDictionary.Views.Pages.DetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlueBerryDictionary.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1080"
      Background="{DynamicResource MainBackground}">

    <local:WordListPageBase.Resources>
        <!-- Phonetic Button Style với Hover Animation -->
        <Style x:Key="PhoneticButtonStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource WordItemBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="18,12"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource WordItemHover}"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="{Binding Source={StaticResource BorderColor}, Path=Color}"
                                            Opacity="0.2"
                                            BlurRadius="12"
                                            ShadowDepth="4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="{DynamicResource WordItemBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource WordItemHover}"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </local:WordListPageBase.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <!-- Main Card -->
            <Border Style="{StaticResource CardStyle}"
                    Padding="0"
                    BorderThickness="2">
                <StackPanel>
                    <!-- ================================= -->
                    <!-- HEADER COMPACT -->
                    <!-- ================================= -->
                    <Border Background="{DynamicResource ToolbarBackground}"
                            BorderBrush="{DynamicResource ToolbarBorder}"
                            BorderThickness="0,0,0,2"
                            CornerRadius="16,16,0,0"
                            Padding="30,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Word Title + Phonetics (CÙNG HÀNG NGANG) -->
                            <StackPanel Grid.Column="0"
                                       Orientation="Horizontal"
                                       VerticalAlignment="Center">
                                <!-- Word Title -->
                                <TextBlock x:Name="WordTitle"
                                          Text="Hello"
                                          FontSize="35"
                                          FontWeight="Bold"
                                          Foreground="{DynamicResource TextColor}"
                                          Margin="0,0,30,0"/>

                                <!-- Phonetic Buttons -->
                                <StackPanel Orientation="Horizontal">
                                    <!-- US Phonetic -->
                                    <Border x:Name="PhoneticUSBorder"
                                           Style="{StaticResource PhoneticButtonStyle}"
                                           MouseDown="PlayAudioUS_Click"
                                           ToolTip="Phát âm US"
                                           Margin="0,0,10,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="US 🇺🇸"
                                                          FontSize="10"
                                                          FontWeight="Bold"
                                                          Foreground="{DynamicResource ButtonColor}"
                                                          Opacity="0.9"/>
                                                <TextBlock x:Name="PhoneticUSTextBlock"
                                                          Text="/həˈloʊ/"
                                                          FontSize="16"
                                                          FontWeight="SemiBold"
                                                          Foreground="{DynamicResource TextColor}"
                                                          Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- Speaker Icon (SVG từ code cũ) -->
                                            <Viewbox Grid.Column="1"
                                                    Width="28" Height="28"
                                                    Margin="10,0,0,0">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M11 5 L6 9 L2 9 L2 15 L6 15 L11 19 Z"
                                                          Fill="{DynamicResource ButtonColor}"
                                                          Opacity="0.9"/>
                                                    <Path Data="M15.54 8.46a5 5 0 0 1 0 7.07"
                                                          Stroke="{DynamicResource ButtonColor}"
                                                          StrokeThickness="2"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"
                                                          Opacity="0.9"/>
                                                    <Path Data="M19.07 4.93a10 10 0 0 1 0 14.14"
                                                          Stroke="{DynamicResource ButtonColor}"
                                                          StrokeThickness="2"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"
                                                          Opacity="0.7"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </Border>

                                    <!-- UK Phonetic -->
                                    <Border x:Name="PhoneticUKBorder"
                                           Style="{StaticResource PhoneticButtonStyle}"
                                           MouseDown="PlayAudioUK_Click"
                                           ToolTip="Phát âm UK">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="UK 🇬🇧"
                                                          FontSize="10"
                                                          FontWeight="Bold"
                                                          Foreground="{DynamicResource ButtonColor}"
                                                          Opacity="0.9"/>
                                                <TextBlock x:Name="PhoneticUKTextBlock"
                                                          Text="/həˈləʊ/"
                                                          FontSize="16"
                                                          FontWeight="SemiBold"
                                                          Foreground="{DynamicResource TextColor}"
                                                          Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <Viewbox Grid.Column="1"
                                                    Width="28" Height="28"
                                                    Margin="10,0,0,0">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M11 5 L6 9 L2 9 L2 15 L6 15 L11 19 Z"
                                                          Fill="{DynamicResource ButtonColor}"
                                                          Opacity="0.9"/>
                                                    <Path Data="M15.54 8.46a5 5 0 0 1 0 7.07"
                                                          Stroke="{DynamicResource ButtonColor}"
                                                          StrokeThickness="2"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"
                                                          Opacity="0.9"/>
                                                    <Path Data="M19.07 4.93a10 10 0 0 1 0 14.14"
                                                          Stroke="{DynamicResource ButtonColor}"
                                                          StrokeThickness="2"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"
                                                          Opacity="0.7"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <!-- Action Buttons (SVG Icons từ code cũ) -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <!-- Favorite -->
                                <Button x:Name="FavoriteBtn"
                                       Style="{StaticResource ActionButtonStyle}"
                                       Click="Favorite_Click"
                                       ToolTip="Yêu thích"
                                       Margin="0,0,8,0">
                                    <Viewbox Width="18" Height="18">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"
                                                  Stroke="{DynamicResource ButtonColor}"
                                                  StrokeThickness="2"
                                                  Fill="Transparent"/>
                                        </Canvas>
                                    </Viewbox>
                                </Button>

                                <!-- Save -->
                                <Button Style="{StaticResource ActionButtonStyle}"
                                       Click="Save_Click"
                                       ToolTip="Lưu vào My Words"
                                        FontSize="14"
                                       Margin="0,0,8,0" Content="🏷️"
                                        Foreground="{StaticResource ButtonColor}">
                                </Button>
                                <!-- Note -->
                                <Button Style="{StaticResource ActionButtonStyle}"
                                       Name="btnNote"
                                       ToolTip="Note"
                                        FontSize="14"
                                       Margin="0,0,8,0"
                                        Click="btnNote_Click" Content="📝"
                                        Foreground="{StaticResource ButtonColor}">
                                </Button>
                                <!-- Download -->
                                <Button Style="{StaticResource ActionButtonStyle}"
                                       Command="{Binding ExecuteDownloadCommand}"
                                       ToolTip="Tải offline">
                                    <Viewbox Width="18" Height="18">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                                                  Stroke="{DynamicResource ButtonColor}"
                                                  StrokeThickness="2"
                                                  Fill="Transparent"
                                                  StrokeStartLineCap="Round"
                                                  StrokeEndLineCap="Round"/>
                                            <Path Data="M7 10 L12 15 L17 10"
                                                  Stroke="{DynamicResource ButtonColor}"
                                                  StrokeThickness="2"
                                                  Fill="Transparent"
                                                  StrokeStartLineCap="Round"
                                                  StrokeEndLineCap="Round"
                                                  StrokeLineJoin="Round"/>
                                            <Line X1="12" Y1="15" X2="12" Y2="3"
                                                  Stroke="{DynamicResource ButtonColor}"
                                                  StrokeThickness="2"
                                                  StrokeStartLineCap="Round"
                                                  StrokeEndLineCap="Round"/>
                                        </Canvas>
                                    </Viewbox>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- ================================= -->
                    <!-- WORD IMAGE (Nhỏ hơn, căn giữa) -->
                    <!-- ================================= -->
                    <Border Padding="30,20"
                            HorizontalAlignment="Center">
                        <Border Width="500" Height="300"
                                CornerRadius="15"
                                Background="{DynamicResource WordItemBackground}"
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="3">
                            <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                Opacity="0.1"
                                                BlurRadius="12"
                                                ShadowDepth="4"/>
                            </Border.Effect>
                            <TextBlock Text="📖"
                                      FontSize="80"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Opacity="0.3"/>
                        </Border>
                    </Border>

                    <!-- ================================= -->
                    <!-- MEANINGS (DYNAMIC) -->
                    <!-- ================================= -->
                    <Border Margin="30,0,30,30">
                        <StackPanel x:Name="MeaningsContainer"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</local:WordListPageBase>