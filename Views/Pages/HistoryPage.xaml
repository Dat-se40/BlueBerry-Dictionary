<local:WordListPageBase x:Class="BlueBerryDictionary.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BlueBerryDictionary.Views.Pages"
      xmlns:userControls="clr-namespace:BlueBerryDictionary.Views.UserControls"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1200"
      Background="{DynamicResource MainBackground}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ================================= -->
            <!-- PAGE HEADER -->
            <!-- ================================= -->
            <Border Grid.Row="0"
                    Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="2"
                    CornerRadius="20"
                    Padding="40,30"
                    Margin="0,0,0,30">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.1" Color="Black"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Header Top -->
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Title Section -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="🕐"
                                       FontSize="48"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextColor}"
                                       Margin="0,-8,15,0"/>
                            <TextBlock Text="History"
                                       FontSize="40"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextColor}"
                                       VerticalAlignment="Center"
                                       Margin="0,-3,0,0" />
                        </StackPanel>

                        <!-- Clear All Button -->
                        <Button Grid.Column="1"
                                Style="{StaticResource ClearButtonStyle}"
                                VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗑️" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="Xóa tất cả" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ================================= -->
            <!-- HISTORY CONTENT -->
            <!-- ================================= -->
            <StackPanel Grid.Row="1">
                <UniformGrid Columns="3" Margin="0,0,0,30" Name ="mainContent">

                </UniformGrid>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</local:WordListPageBase>