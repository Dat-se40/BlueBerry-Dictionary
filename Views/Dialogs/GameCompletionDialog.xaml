<Window x:Class="BlueBerryDictionary.Views.Dialogs.GameCompletionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Completed"
        Width="650"
        Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MainBackground}">

    <Window.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ToolButtonActive}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SearchBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource ButtonColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource WordItemHover}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#10b981" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource ToolButtonActive}"
                BorderThickness="2"
                CornerRadius="25"
                Padding="30"
                Margin="20">
            <StackPanel>
                <TextBlock Text="ðŸŽ‰ Completed!"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextColor}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20" />

                <!-- Percentage Circle -->
                <Border Width="150" Height="150"
                        BorderBrush="{DynamicResource ToolButtonActive}"
                        BorderThickness="8"
                        CornerRadius="100"
                        Margin="0,0,0,30">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="TxtPercentage"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextColor}"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Known"
                                   FontSize="16"
                                   Foreground="{DynamicResource TextColor}"
                                   Opacity="0.7"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Summary Stats -->
                <Border x:Name="StatsSummaryBorder"
                        Background="{DynamicResource SearchBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="2"
                        CornerRadius="15"
                        Padding="25"
                        Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Study Summary"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,20" />

                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="âœ… Known"
                                       Foreground="{DynamicResource TextColor}"
                                       Opacity="0.7" />
                            <TextBlock x:Name="TxtKnownCount"
                                       FontWeight="Bold"
                                       Foreground="#10b981"
                                       HorizontalAlignment="Right" />
                        </Grid>

                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="âŒ Unknown"
                                       Foreground="{DynamicResource TextColor}"
                                       Opacity="0.7" />
                            <TextBlock x:Name="TxtUnknownCount"
                                       FontWeight="Bold"
                                       Foreground="#dc2626"
                                       HorizontalAlignment="Right" />
                        </Grid>

                        <Grid>
                            <TextBlock Text="ðŸ“ Total"
                                       Foreground="{DynamicResource TextColor}"
                                       Opacity="0.7" />
                            <TextBlock x:Name="TxtTotalCount"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextColor}"
                                       HorizontalAlignment="Right" />
                        </Grid>

                        <!-- Skipped List -->
                        <Border x:Name="SkippedListContainer"
                                Background="{DynamicResource CardBackground}"
                                BorderBrush="{DynamicResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="15"
                                Margin="0,15,0,0"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="ðŸš© Skipped cards (click to review):"
                                           FontWeight="SemiBold"
                                           Foreground="#856404"
                                           Margin="0,0,0,10" />
                                <ItemsControl x:Name="SkippedNumbersList">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding}"
                                                    Background="#ffc107"
                                                    Foreground="#856404"
                                                    BorderBrush="#e0a800"
                                                    BorderThickness="1"
                                                    Padding="10,4"
                                                    Margin="4"
                                                    FontWeight="SemiBold"
                                                    Cursor="Hand"
                                                    Click="SkipNumber_Click"
                                                    Tag="{Binding}">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="5" />
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Actions - 3 Buttons -->
                <UniformGrid x:Name="Actions3Buttons"
                             Columns="3"
                             Rows="1"
                             Visibility="Collapsed">
                    <Button Content="ðŸ  Close"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,7,0"
                            Click="Close_Click" />
                    <Button Content="ðŸ”„ Restart"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="7,0,7,0"
                            Click="Restart_Click" />
                    <Button Content="ðŸ‘ï¸ Review Skipped"
                            Style="{StaticResource SuccessButtonStyle}"
                            Margin="7,0,0,0"
                            Click="ReviewSkipped_Click" />
                </UniformGrid>

                <!-- Actions - 2 Buttons -->
                <UniformGrid x:Name="Actions2Buttons"
                             Columns="2"
                             Rows="1"
                             Visibility="Visible">
                    <Button Content="ðŸ  Close"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,7,0"
                            Click="Close_Click" />
                    <Button Content="ðŸ”„ Restart"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="7,0,0,0"
                            Click="Restart_Click" />
                </UniformGrid>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>