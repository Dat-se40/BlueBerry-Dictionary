<Window x:Class="BlueBerryDictionary.Views.Dialogs.PackageDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vocabulary Package Details"
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MainBackground}">

    <Border BorderBrush="{DynamicResource BorderColor}"
            BorderThickness="2"
            CornerRadius="20"
            Margin="20"
            Padding="30"
            Background="{DynamicResource CardBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="{Binding PackageName}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextColor}"/>
                    <Border Background="{DynamicResource ButtonColor}"
                            CornerRadius="15"
                            Padding="12,5"
                            Margin="15,0,0,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalWordsCount}"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <!-- Mô tả + (sau này bạn có thể thêm % hoàn thành ở đây nếu muốn) -->
                <TextBlock Text="{Binding PackageDescription}"
                           FontSize="14"
                           Opacity="0.8"
                           Foreground="{DynamicResource TextColor}"/>

                <!-- Search Box -->
                <Border Background="{DynamicResource SearchBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="2"
                        CornerRadius="12"
                        Padding="15"
                        Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="14"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="{DynamicResource TextColor}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button Grid.Column="1"
                                Content="🔍 Search"
                                Padding="15,8"
                                Background="{DynamicResource ButtonColor}"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding SearchCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- WORD LIST -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredWords}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource WordItemBackground}"
                                    BorderBrush="{DynamicResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Padding="15"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Word Info -->
                                    <StackPanel Grid.Column="0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="{Binding word}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource TextColor}"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding phonetic}"
                                                       FontSize="14"
                                                       Opacity="0.7"
                                                       Foreground="{DynamicResource TextColor}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding ShortDefinition}"
                                                   FontSize="13"
                                                   Opacity="0.8"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextColor}"/>
                                    </StackPanel>

                                    <!-- Checkbox: ẩn khi chưa tải, khóa khi local đã có -->
                                    <CheckBox Grid.Column="1"
                                              Margin="15,0,0,0"
                                              VerticalAlignment="Center"
                                              IsChecked="{Binding IsSelected}"
                                              IsEnabled="{Binding IsSelectable}"
                                              Visibility="{Binding DataContext.ShowSelectionControls,
                                                                   RelativeSource={RelativeSource AncestorType=Window},
                                                                   Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2" Margin="0,20,0,0">
                <!-- Thanh trạng thái chọn: chỉ hiện khi có checkbox -->
                <Border Background="{DynamicResource ToolbarBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,0,0,15"
                        Visibility="{Binding ShowSelectionControls,
                                             Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0"
                                  Content="Select all"
                                  IsChecked="{Binding SelectAll}"
                                  FontWeight="SemiBold"
                                  Margin="0,0,20,0"/>

                        <TextBlock Grid.Column="1"
                                   Text="{Binding SelectionSummary}"
                                   VerticalAlignment="Center"
                                   Opacity="0.8"/>

                        <TextBlock Grid.Column="2"
                                   Text="{Binding EstimatedSize}"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource ButtonColor}"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="❌ Close"
                            Padding="0,14"
                            Margin="0,0,10,0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Background="Transparent"
                            Foreground="#DC2626"
                            BorderBrush="#DC2626"
                            BorderThickness="2"
                            Cursor="Hand"
                            Click="CancelButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="12"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Nút tải full / tải info: ẩn nếu IsDownloadedMode -->
                    <Button Grid.Column="1"
                            Padding="0,14"
                            Margin="10,0,0,0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Background="{DynamicResource ButtonColor}"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding DownloadSelectedCommand}"
                            Visibility="{Binding ShowSelectionControls,
                                                 Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button.Content>
                            <TextBlock Text="{Binding FullDownloadButtonText}"/>
                        </Button.Content>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="12"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>
