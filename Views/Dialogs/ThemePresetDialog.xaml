                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" />
                                </Border.Effect>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#CDB4DB" Offset="0" />
                                        <GradientStop Color="#A2D2FF" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <!-- 3 màu chính -->
                                <Grid>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Height="25">
                                        <Border Background="#A2D2FF" Width="46.67" />
                                        <Border Background="#BDE0FE" Width="46.67" />
                                        <Border Background="#CDB4DB" Width="46.67" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <TextBlock Text="Pastel Dream" TextAlignment="Center" Margin="0,8,0,0"
                                       Foreground="{DynamicResource TextColor}" FontWeight="SemiBold" FontSize="12" />
