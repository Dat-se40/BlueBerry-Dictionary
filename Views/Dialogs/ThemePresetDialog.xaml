<Window x:Class="BlueBerryDictionary.Views.Dialogs.ThemePresetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chọn chủ đề màu sắc"
        Width="650"
        Height="450"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource CardBackground}"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="20" Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource BorderColor}" BorderThickness="2">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🎨" FontSize="28" Margin="0,0,12,0"/>
                    <TextBlock Text="Chọn chủ đề có sẵn"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextColor}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="×"
                        FontSize="36"
                        Width="45"
                        Height="45"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{DynamicResource TextColor}"
                        Cursor="Hand"
                        Click="Close_Click"/>
            </Grid>

            <!-- Theme Grid -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <UniformGrid Columns="4">
                    <!-- Blue (Xanh dương - Mặc định) -->
                    <Button Margin="10" Cursor="Hand" Background="Transparent" BorderThickness="0"
                            Click="ThemeButton_Click" Tag="blue">
                        <StackPanel Width="120">
                            <Border Height="90" CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                                </Border.Effect>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#2D4ACC" Offset="0"/>
                                        <GradientStop Color="#5B7FFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="Xanh dương" TextAlignment="Center" Margin="0,10,0,0"
                                       Foreground="{DynamicResource TextColor}" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Purple (Tím) -->
                    <Button Margin="10" Cursor="Hand" Background="Transparent" BorderThickness="0"
                            Click="ThemeButton_Click" Tag="purple">
                        <StackPanel Width="120">
                            <Border Height="90" CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                                </Border.Effect>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#7C3AED" Offset="0"/>
                                        <GradientStop Color="#A78BFA" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="Tím" TextAlignment="Center" Margin="0,10,0,0"
                                       Foreground="{DynamicResource TextColor}" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Green (Xanh lá) -->
                    <Button Margin="10" Cursor="Hand" Background="Transparent" BorderThickness="0"
                            Click="ThemeButton_Click" Tag="green">
                        <StackPanel Width="120">
                            <Border Height="90" CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                                </Border.Effect>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#059669" Offset="0"/>
                                        <GradientStop Color="#34D399" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="Xanh lá" TextAlignment="Center" Margin="0,10,0,0"
                                       Foreground="{DynamicResource TextColor}" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Orange (Cam) -->
                    <Button Margin="10" Cursor="Hand" Background="Transparent" BorderThickness="0"
                            Click="ThemeButton_Click" Tag="orange">
                        <StackPanel Width="120">
                            <Border Height="90" CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                                </Border.Effect>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#EA580C" Offset="0"/>
                                        <GradientStop Color="#FB923C" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="Cam" TextAlignment="Center" Margin="0,10,0,0"
                                       Foreground="{DynamicResource TextColor}" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Red (Đỏ) -->
                    <Button Margin="10" Cursor="Hand" Background="Transparent" BorderThickness="0"
                            Click="ThemeButton_Click" Tag="red">
                        <StackPanel Width="120">
                            <Border Height="90" CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                                </Border.Effect>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#DC2626" Offset="0"/>
                                        <GradientStop Color="#F87171" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="Đỏ" TextAlignment="Center" Margin="0,10,0,0"
                                       Foreground="{DynamicResource TextColor}" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Pink (Hồng) -->
                    <Button Margin="10" Cursor="Hand" Background="Transparent" BorderThickness="0"
                            Click="ThemeButton_Click" Tag="pink">
                        <StackPanel Width="120">
                            <Border Height="90" CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                                </Border.Effect>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#DB2777" Offset="0"/>
                                        <GradientStop Color="#F472B6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="Hồng" TextAlignment="Center" Margin="0,10,0,0"
                                       Foreground="{DynamicResource TextColor}" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Cyan -->
                    <Button Margin="10" Cursor="Hand" Background="Transparent" BorderThickness="0"
                            Click="ThemeButton_Click" Tag="cyan">
                        <StackPanel Width="120">
                            <Border Height="90" CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                                </Border.Effect>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#0891B2" Offset="0"/>
                                        <GradientStop Color="#22D3EE" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="Cyan" TextAlignment="Center" Margin="0,10,0,0"
                                       Foreground="{DynamicResource TextColor}" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Indigo -->
                    <Button Margin="10" Cursor="Hand" Background="Transparent" BorderThickness="0"
                            Click="ThemeButton_Click" Tag="indigo">
                        <StackPanel Width="120">
                            <Border Height="90" CornerRadius="12">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                                </Border.Effect>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#4F46E5" Offset="0"/>
                                        <GradientStop Color="#818CF8" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="Indigo" TextAlignment="Center" Margin="0,10,0,0"
                                       Foreground="{DynamicResource TextColor}" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
