<Window x:Class="BlueBerryDictionary.Views.Dialogs.GameHistoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game History"
        Width="900"
        Height="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource MainBackground}">

    <Window.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ToolButtonActive}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#dc2626" />
            <Setter Property="BorderBrush" Value="#dc2626" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#fee" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- History Item Template -->
        <DataTemplate x:Key="HistoryItemTemplate">
            <Border Background="{DynamicResource SearchBackground}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="25,20"
                    Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>

                    <!-- Left Side -->
                    <StackPanel Grid.Column="0">
                        <!-- Date & Time -->
                        <TextBlock Text="{Binding StartTime, StringFormat='dd/MM/yyyy HH:mm'}"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,8" />

                        <!-- Data Source -->
                        <TextBlock Text="{Binding DataSourceName}"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextColor}"
                                   Opacity="0.8"
                                   Margin="0,0,0,10" />

                        <!-- Stats Badges -->
                        <WrapPanel Margin="0,5,0,0">
                            <!-- Known Badge -->
                            <Border Background="{DynamicResource CardBackground}"
                                    BorderBrush="{DynamicResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10,5"
                                    Margin="0,0,10,0">
                                <TextBlock FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#10b981">
                                    <Run Text="âœ… " />
                                    <Run Text="{Binding KnownCards}" />
                                </TextBlock>
                            </Border>

                            <!-- Unknown Badge -->
                            <Border Background="{DynamicResource CardBackground}"
                                    BorderBrush="{DynamicResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10,5"
                                    Margin="0,0,10,0">
                                <TextBlock FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#dc2626">
                                    <Run Text="âŒ " />
                                    <Run Text="{Binding UnknownCards}" />
                                </TextBlock>
                            </Border>

                            <!-- Duration Badge -->
                            <Border Background="{DynamicResource CardBackground}"
                                    BorderBrush="{DynamicResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10,5">
                                <TextBlock FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextColor}">
                                    <Run Text="â±ï¸ " />
                                    <Run Text="{Binding DurationText, Mode=OneWay}" />
                                </TextBlock>
                            </Border>
                        </WrapPanel>
                    </StackPanel>

                    <!-- Right Side - Percentage -->
                    <StackPanel Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Width="120">
                        <TextBlock Text="{Binding AccuracyPercentage, StringFormat='{}{0:F0}%'}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource ButtonColor}"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Accuracy"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextColor}"
                                   Opacity="0.7"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,0,0,2"
                Padding="30,20">
            <DockPanel>
                <Button Content="âœ•"
                        Width="40" Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="20"
                        Cursor="Hand"
                        DockPanel.Dock="Right"
                        Click="Close_Click" />
                <TextBlock Text="ðŸ“Š Lá»‹ch sá»­ luyá»‡n táº­p"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextColor}"
                           VerticalAlignment="Center" />
            </DockPanel>
        </Border>

        <!-- Statistics Summary -->
        <Border Grid.Row="1"
                Background="{DynamicResource SearchBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,0,0,2"
                Padding="40,25">
            <UniformGrid Columns="4" Rows="1">
                <StackPanel HorizontalAlignment="Center" Margin="10,0">
                    <TextBlock x:Name="TxtTotalGames"
                               Text="0"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="{DynamicResource ButtonColor}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="LÆ°á»£t chÆ¡i"
                               FontSize="13"
                               Foreground="{DynamicResource TextColor}"
                               Opacity="0.7"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" Margin="10,0">
                    <TextBlock x:Name="TxtTotalCards"
                               Text="0"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="{DynamicResource ButtonColor}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Tá»« Ä‘Ã£ há»c"
                               FontSize="13"
                               Foreground="{DynamicResource TextColor}"
                               Opacity="0.7"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" Margin="10,0">
                    <TextBlock x:Name="TxtAvgAccuracy"
                               Text="0%"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="{DynamicResource ButtonColor}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Äá»™ chÃ­nh xÃ¡c TB"
                               FontSize="13"
                               Foreground="{DynamicResource TextColor}"
                               Opacity="0.7"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" Margin="10,0">
                    <TextBlock x:Name="TxtTotalTime"
                               Text="0h"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="{DynamicResource ButtonColor}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Tá»•ng thá»i gian"
                               FontSize="13"
                               Foreground="{DynamicResource TextColor}"
                               Opacity="0.7"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </UniformGrid>
        </Border>

        <!-- History List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="40,20">
            <ItemsControl x:Name="HistoryList"
                          ItemTemplate="{StaticResource HistoryItemTemplate}" />
        </ScrollViewer>

        <!-- Actions -->
        <UniformGrid Grid.Row="3" Columns="2" Rows="1" Margin="40,20,40,30">
            <Button Content="ðŸ—‘ï¸ XÃ³a táº¥t cáº£"
                    Style="{StaticResource DangerButtonStyle}"
                    Margin="0,0,10,0"
                    Click="ClearHistory_Click" />
            <Button Content="âœ“ ÄÃ³ng"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="10,0,0,0"
                    Click="Close_Click" />
        </UniformGrid>
    </Grid>
</Window>