<Window x:Class="BlueBerryDictionary.Views.Dialogs.Introduces.LicensesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giấy Phép Mã Nguồn"
        Width="700" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <!-- Body Style -->
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <!-- Link Style -->
        <Style x:Key="LinkStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,3,0,3"/>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource ButtonColor}"
                Padding="30,20">
            <StackPanel>
                <TextBlock Text="⚖️ GIẤY PHÉP MÃ NGUỒN"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Open Source Licenses and Acknowledgments"
                           FontSize="14"
                           Foreground="White"
                           Opacity="0.9"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
            <StackPanel>
                <!-- App License -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Style="{StaticResource HeaderStyle}" Margin="0,0,0,15">
                            📖 BlueBerry Dictionary - MIT License
                        </TextBlock>

                        <TextBlock Style="{StaticResource BodyStyle}">
                            Copyright (c) 2024 BlueBerry Dictionary Team
                        </TextBlock>

                        <TextBlock Style="{StaticResource BodyStyle}">
                            Permission is hereby granted, free of charge, to any person obtaining a copy of this software and associated documentation files (the "Software"), to deal in the Software without restriction, including without limitation the rights to use, copy, modify, merge, publish, distribute, sublicense, and/or sell copies of the Software, and to permit persons to whom the Software is furnished to do so, subject to the following conditions:
                        </TextBlock>

                        <TextBlock Style="{StaticResource BodyStyle}">
                            The above copyright notice and this permission notice shall be included in all copies or substantial portions of the Software.
                        </TextBlock>

                        <TextBlock Style="{StaticResource BodyStyle}" FontWeight="SemiBold">
                            THE SOFTWARE IS PROVIDED "AS IS", WITHOUT WARRANTY OF ANY KIND, EXPRESS OR IMPLIED.
                        </TextBlock>

                        <TextBlock Style="{StaticResource LinkStyle}"
                                   Text="🔗 View full license on GitHub"
                                   MouseDown="AppLicense_Click"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Third-Party Libraries -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Style="{StaticResource HeaderStyle}" Margin="0,0,0,15">
                            📚 Third-Party Libraries
                        </TextBlock>

                        <!-- .NET -->
                        <TextBlock Text=".NET 9.0"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,10,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}">
                            License: MIT License
                            <LineBreak/>
                            © Microsoft Corporation
                        </TextBlock>
                        <TextBlock Style="{StaticResource LinkStyle}"
                                   Text="🔗 https://github.com/dotnet/runtime"
                                   MouseDown="DotNetLink_Click"/>

                        <!-- Newtonsoft.Json -->
                        <TextBlock Text="Newtonsoft.Json"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,15,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}">
                            License: MIT License
                            <LineBreak/>
                            © James Newton-King
                        </TextBlock>
                        <TextBlock Style="{StaticResource LinkStyle}"
                                   Text="🔗 https://www.newtonsoft.com/json"
                                   MouseDown="NewtonsoftLink_Click"/>

                        <!-- Google Drive API -->
                        <TextBlock Text="Google.Apis.Drive.v3"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,15,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}">
                            License: Apache License 2.0
                            <LineBreak/>
                            © Google LLC
                        </TextBlock>
                        <TextBlock Style="{StaticResource LinkStyle}"
                                   Text="🔗 https://developers.google.com/drive"
                                   MouseDown="GoogleAPILink_Click"/>
                    </StackPanel>
                </Border>

                <!-- APIs & Data Sources -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Style="{StaticResource HeaderStyle}" Margin="0,0,0,15">
                            🌐 APIs and Data Sources
                        </TextBlock>

                        <!-- Free Dictionary API -->
                        <TextBlock Text="Free Dictionary API"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,10,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}">
                            Nguồn dữ liệu từ điển chính
                        </TextBlock>
                        <TextBlock Style="{StaticResource LinkStyle}"
                                   Text="🔗 https://dictionaryapi.dev"
                                   MouseDown="FreeDictLink_Click"/>

                        <!-- Merriam-Webster -->
                        <TextBlock Text="Merriam-Webster Dictionary API"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,15,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}">
                            Nguồn từ điển bổ sung
                        </TextBlock>
                        <TextBlock Style="{StaticResource LinkStyle}"
                                   Text="🔗 https://dictionaryapi.com"
                                   MouseDown="MerriamLink_Click"/>

                        <!-- Cambridge Dictionary -->
                        <TextBlock Text="Cambridge Dictionary"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,15,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}">
                            Nguồn phát âm audio
                        </TextBlock>
                        <TextBlock Style="{StaticResource LinkStyle}"
                                   Text="🔗 https://dictionary.cambridge.org"
                                   MouseDown="CambridgeLink_Click"/>
                    </StackPanel>
                </Border>

                <!-- Acknowledgments -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Style="{StaticResource HeaderStyle}" Margin="0,0,0,15">
                            🙏 Acknowledgments
                        </TextBlock>

                        <TextBlock Style="{StaticResource BodyStyle}">
                            Chúng tôi xin gửi lời cảm ơn đến:
                        </TextBlock>

                        <StackPanel Margin="15,10,0,0">
                            <TextBlock Style="{StaticResource BodyStyle}">
                                • WPF Community - Hỗ trợ kỹ thuật
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyStyle}">
                                • .NET Foundation - Framework mạnh mẽ
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyStyle}">
                                • Stack Overflow - Giải đáp thắc mắc
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyStyle}">
                                • ThS. Mai Trọng Khang - Hướng dẫn nhiệt tình
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyStyle}">
                                • Tất cả người dùng - Đóng góp ý kiến quý báu
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="20">
            <Button Content="Đóng"
                    Width="120"
                    Style="{StaticResource CloseButtonStyle}"
                    HorizontalAlignment="Right"
                    Click="Close_Click"/>
        </Border>
    </Grid>
</Window>