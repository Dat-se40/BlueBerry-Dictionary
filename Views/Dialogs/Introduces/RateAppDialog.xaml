<Window x:Class="BlueBerryDictionary.Views.Dialogs.Introduces.RateAppDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rate the App"
        Width="550" Height="500"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Body Style -->
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <!-- Star Button Style -->
        <Style x:Key="StarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource ButtonColor}"
                Padding="30,20">
            <StackPanel>
                <TextBlock Text="⭐ RATE THE APP"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Your feedback helps us improve"
                           FontSize="14"
                           Foreground="White"
                           Opacity="0.9"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
            <StackPanel>
                <!-- Intro -->
                <TextBlock Style="{StaticResource BodyStyle}" TextAlignment="Center" FontSize="16">
                    Do you like BlueBerry Dictionary ? 💙
                </TextBlock>

                <TextBlock Style="{StaticResource BodyStyle}" TextAlignment="Center" Margin="0,5,0,20">
                    Take a few seconds to rate and share your experience!
                </TextBlock>

                <!-- Star Rating -->

                <!-- Feedback Section -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20"
                        x:Name="FeedbackSection"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Additional comments (optional)"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,10"/>

                        <TextBox x:Name="FeedbackTextBox"
                                 Height="100"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="{DynamicResource MainBackground}"
                                 Foreground="{DynamicResource TextColor}"
                                 BorderBrush="{DynamicResource BorderColor}"
                                 Padding="10"/>

                        <TextBlock Text="Example: Which feature do you like most ? What could be improved ?"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextColor}"
                                   Opacity="0.6"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Share Options -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Share with friends"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,10"/>

                        <TextBlock Style="{StaticResource BodyStyle}">
                            Introduce BlueBerry Dictionary to your friends and learn vocabulary more effectively together!
                        </TextBlock>

                        <Button Content="🐙 GitHub - Give us a ⭐"
                                Style="{StaticResource ActionButtonStyle}"
                                HorizontalAlignment="Left"
                                Click="GitHubStar_Click"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close"
                        Style="{StaticResource CloseButtonStyle}"
                        Click="Close_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>