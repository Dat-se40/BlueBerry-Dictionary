<Window x:Class="BlueBerryDictionary.Views.Dialogs.Introduces.ContactDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Liên Hệ và Hỗ Trợ"
        Width="600" Height="500"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Body Style -->
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <!-- Link Style -->
        <Style x:Key="LinkStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource ButtonColor}"
                Padding="30,20">
            <StackPanel>
                <TextBlock Text="📧 LIÊN HỆ &amp; HỖ TRỢ"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn"
                           FontSize="14"
                           Foreground="White"
                           Opacity="0.9"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
            <StackPanel>
                <!-- Introduction -->
                <TextBlock Style="{StaticResource HeaderStyle}">
                    💬 Liên Hệ Với Chúng Tôi
                </TextBlock>

                <TextBlock Style="{StaticResource BodyStyle}">
                    Nếu bạn gặp bất kỳ vấn đề nào không được đề cập trong hướng dẫn, hoặc có ý tưởng cải tiến ứng dụng, chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ.
                </TextBlock>

                <!-- Email -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="📧 Email"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Style="{StaticResource LinkStyle}"
                                   Text="labotanique117@gmail.com"
                                   MouseDown="EmailLink_Click"/>
                    </StackPanel>
                </Border>

                <!-- GitHub -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="🐙 GitHub Repository"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Style="{StaticResource LinkStyle}"
                                   Text="github.com/Dat-se40/BlueBerry-Dictionary"
                                   MouseDown="GitHubLink_Click"/>
                        <TextBlock Text="• Issues: Báo lỗi và theo dõi tiến độ fix"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextColor}"
                                   Opacity="0.8"
                                   Margin="0,10,0,3"/>
                        <TextBlock Text="• Discussions: Thảo luận tính năng mới"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextColor}"
                                   Opacity="0.8"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Team Info -->
                <TextBlock Style="{StaticResource HeaderStyle}" Margin="0,10,0,10">
                    👥 Đội Ngũ Phát Triển
                </TextBlock>

                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Môn học: Lập trình trực quan"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Giảng viên: Mai Trọng Khang"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Học kỳ: 1 - Năm 2024-2025"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Thành viên:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• Nguyễn Tấn Đạt"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="10,3,0,3"/>
                        <TextBlock Text="• Võ Nguyễn Thanh Hương"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="10,3,0,3"/>
                        <TextBlock Text="• Phan Thế Phong"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="10,3,0,3"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Đóng"
                        Style="{StaticResource CloseButtonStyle}"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>