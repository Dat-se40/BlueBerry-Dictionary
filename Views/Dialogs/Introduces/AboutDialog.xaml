<Window x:Class="BlueBerryDictionary.Views.Dialogs.Introduces.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About the App"
        Width="600" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <!-- Body Style -->
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <!-- Link Style -->
        <Style x:Key="LinkStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="25,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource ButtonColor}"
                Padding="30,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📖"
                           FontSize="48"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="BLUEBERRY DICTIONARY"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="A smart dictionary for everyone"
                               FontSize="14"
                               Foreground="White"
                               Opacity="0.9"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
            <StackPanel>
                <!-- Version Info -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ℹ️ Version Information"
                                   Style="{StaticResource HeaderStyle}"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Version:"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextColor}"
                                       Margin="0,5,15,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="1.0.0"
                                       Foreground="{DynamicResource TextColor}"
                                       Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Build:"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextColor}"
                                       Margin="0,5,15,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       Text="2025.01.15"
                                       Foreground="{DynamicResource TextColor}"
                                       Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Platform:"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextColor}"
                                       Margin="0,5,15,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                       Text="Windows 10/11 - WPF .NET 9.0"
                                       Foreground="{DynamicResource TextColor}"
                                       Margin="0,5,0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0"
                                       Text="License:"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextColor}"
                                       Margin="0,5,15,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1"
                                       Text="MIT License - Open Source"
                                       Foreground="{DynamicResource TextColor}"
                                       Margin="0,5,0,5"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Team Info -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="👥 Development Team"
                                   Style="{StaticResource HeaderStyle}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Style="{StaticResource BodyStyle}">
                            <Run Text="Subject:" FontWeight="SemiBold"/>
                            <Run Text="Lập trình trực quan"/>
                        </TextBlock>

                        <TextBlock Style="{StaticResource BodyStyle}">
                            <Run Text="Lecturer:" FontWeight="SemiBold"/>
                            <Run Text="ThS. Mai Trọng Khang"/>
                        </TextBlock>

                        <TextBlock Style="{StaticResource BodyStyle}">
                            <Run Text="Semester:" FontWeight="SemiBold"/>
                            <Run Text="1 - Academic Year 2024-2025"/>
                        </TextBlock>

                        <TextBlock Text="Member:"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,15,0,8"/>

                        <StackPanel Margin="15,0,0,0">
                            <TextBlock Style="{StaticResource BodyStyle}">
                                • Nguyễn Tấn Đạt
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyStyle}">
                                • Võ Nguyễn Thanh Hương
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyStyle}">
                                • Phan Thế Phong
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Description -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="📝 Description"
                                   Style="{StaticResource HeaderStyle}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Style="{StaticResource BodyStyle}">
                            BlueBerry Dictionary is a smart English dictionary app designed to provide the most effective vocabulary lookup and learning experience. The app is not only a tool for looking up words but also a companion that helps you build your personal vocabulary systematically.
                        </TextBlock>

                        <TextBlock Text="Key Features:"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,10,0,8"/>

                        <StackPanel Margin="15,0,0,0">
                            <TextBlock Style="{StaticResource BodyStyle}">
                                ✅ Look up words using multiple reliable sources
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyStyle}">
                                ✅ Accurate US 🇺🇸 and UK 🇬🇧 pronunciation
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyStyle}">
                                ✅ Manage vocabulary with a Tag system
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyStyle}">
                                ✅ Sync data via Google Drive
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyStyle}">
                                ✅ 23 themes + custom colors
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyStyle}">
                                ✅ Supports offline mode
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Links -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="🔗 Link"
                                   Style="{StaticResource HeaderStyle}"
                                   Margin="0,0,0,15"/>

                        <StackPanel>
                            <TextBlock Style="{StaticResource LinkStyle}"
                                       Text="🐙 GitHub Repository"
                                       MouseDown="GitHubLink_Click"/>
                            <TextBox Text="labotanique117@gmail.com"
                                 IsReadOnly="True"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="{DynamicResource ButtonColor}"
                                 FontSize="14"
                                 Cursor="IBeam"
                                 Style="{x:Null}"
                                 Padding="0"
                                 HorizontalAlignment="Left" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="20">
            <Button Content="Close"
                    Width="120"
                    Style="{StaticResource CloseButtonStyle}"
                    HorizontalAlignment="Right"
                    Click="Close_Click"/>
        </Border>
    </Grid>
</Window>
