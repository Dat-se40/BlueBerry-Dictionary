<Window x:Class="BlueBerryDictionary.Views.Dialogs.Introduces.ReportBugDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report a Bug"
        Width="650" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Body Style -->
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource ButtonColor}"
                Padding="30,20">
            <StackPanel>
                <TextBlock Text="🐛 REPORT A BUG"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Help us improve the app"
                           FontSize="14"
                           Foreground="White"
                           Opacity="0.9"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
            <StackPanel>
                <!-- Intro -->
                <TextBlock Style="{StaticResource BodyStyle}">
                    Please provide as much information as possible so we can quickly identify and resolve the issue.
                </TextBlock>

                <!-- What to include -->
                <TextBlock Style="{StaticResource HeaderStyle}" Margin="0,15,0,10">
                    📝 Information to Provide
                </TextBlock>

                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="1️ Detailed error description"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}"
                                   Margin="15,5,0,10">
                            • Where did the error occur ? (Which page or feature ?)
                            <LineBreak/>
                            • What happened ? (Crash, unresponsive, incorrect display, etc.)
                        </TextBlock>

                        <TextBlock Text="2️ Steps to reproduce the issue"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,10,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}"
                                   Margin="15,5,0,10">
                            • Step 1: Open page X
                            <LineBreak/>
                            • Step 2: Click the Y button
                            <LineBreak/>
                            • Step 3: The error appears
                        </TextBlock>

                        <TextBlock Text="3️ Screenshot (if any)"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,10,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}"
                                   Margin="15,5,0,10">
                            • Take a screenshot of the error
                            <LineBreak/>
                            • Attach it in the email or GitHub Issue
                        </TextBlock>

                        <TextBlock Text="4️⃣ System Information"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,10,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}"
                                   Margin="15,5,0,10">
                            • Windows version: 10/11
                            <LineBreak/>
                            • App version: 1.0.0
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- How to report -->
                <TextBlock Style="{StaticResource HeaderStyle}" Margin="0,10,0,10">
                    📬 How to Submit a Report
                </TextBlock>

                <!-- Option 1: GitHub -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="✅ GitHub Issues (Recommendation)"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Style="{StaticResource BodyStyle}">
                            • Open and transparent
                            <LineBreak/>
                            • Track fix progress in real-time
                            <LineBreak/>
                            • Community can provide support
                        </TextBlock>
                        <Button Content="🐙 Open GitHub Issues"
                                Style="{StaticResource ActionButtonStyle}"
                                HorizontalAlignment="Left"
                                Click="OpenGitHubIssues_Click"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Option 2: Email -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="📧 Email"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Style="{StaticResource BodyStyle}">
                            • More private
                            <LineBreak/>
                            • Suitable for personal issues
                            <LineBreak/>
                            • Email: labotanique117@gmail.com
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="20">
            <Button Content="Close"
                    Style="{StaticResource CloseButtonStyle}"
                    HorizontalAlignment="Right"
                    Click="CloseButton_Click"/>
        </Border>
    </Grid>
</Window>