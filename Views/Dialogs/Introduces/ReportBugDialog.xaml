<Window x:Class="BlueBerryDictionary.Views.Dialogs.Introduces.ReportBugDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Báo Lỗi"
        Width="650" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Body Style -->
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource ButtonColor}"
                Padding="30,20">
            <StackPanel>
                <TextBlock Text="🐛 BÁO LỖI"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Giúp chúng tôi cải thiện ứng dụng"
                           FontSize="14"
                           Foreground="White"
                           Opacity="0.9"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
            <StackPanel>
                <!-- Intro -->
                <TextBlock Style="{StaticResource BodyStyle}">
                    Hãy cung cấp càng nhiều thông tin càng tốt để chúng tôi có thể nhanh chóng xác định và khắc phục vấn đề.
                </TextBlock>

                <!-- What to include -->
                <TextBlock Style="{StaticResource HeaderStyle}" Margin="0,15,0,10">
                    📝 Thông Tin Cần Cung Cấp
                </TextBlock>

                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="1️⃣ Mô tả chi tiết lỗi"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}"
                                   Margin="15,5,0,10">
                            • Lỗi xảy ra ở đâu? (trang nào, tính năng gì)
                            <LineBreak/>
                            • Điều gì xảy ra? (crash, không phản hồi, hiển thị sai...)
                        </TextBlock>

                        <TextBlock Text="2️⃣ Các bước để tái hiện lỗi"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,10,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}"
                                   Margin="15,5,0,10">
                            • Bước 1: Mở trang X
                            <LineBreak/>
                            • Bước 2: Click vào nút Y
                            <LineBreak/>
                            • Bước 3: Lỗi xuất hiện
                        </TextBlock>

                        <TextBlock Text="3️⃣ Screenshot (nếu có)"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,10,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}"
                                   Margin="15,5,0,10">
                            • Chụp màn hình lỗi
                            <LineBreak/>
                            • Đính kèm trong email hoặc GitHub Issue
                        </TextBlock>

                        <TextBlock Text="4️⃣ Thông tin hệ thống"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,10,0,5"/>
                        <TextBlock Style="{StaticResource BodyStyle}"
                                   Margin="15,5,0,10">
                            • Windows version: 10/11
                            <LineBreak/>
                            • App version: 1.0.0
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- How to report -->
                <TextBlock Style="{StaticResource HeaderStyle}" Margin="0,10,0,10">
                    📬 Cách Gửi Báo Cáo
                </TextBlock>

                <!-- Option 1: GitHub -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="✅ GitHub Issues (Khuyến nghị)"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Style="{StaticResource BodyStyle}">
                            • Công khai, minh bạch
                            <LineBreak/>
                            • Theo dõi tiến độ fix realtime
                            <LineBreak/>
                            • Cộng đồng có thể hỗ trợ
                        </TextBlock>
                        <Button Content="🐙 Mở GitHub Issues"
                                Style="{StaticResource ActionButtonStyle}"
                                HorizontalAlignment="Left"
                                Click="OpenGitHubIssues_Click"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Option 2: Email -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="📧 Email"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColor}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Style="{StaticResource BodyStyle}">
                            • Riêng tư hơn
                            <LineBreak/>
                            • Phù hợp cho vấn đề cá nhân
                            <LineBreak/>
                            • Email: 24520280@gm.uit.edu.vn
                        </TextBlock>
                        <Button Content="📧 Gửi Email Báo Lỗi"
                                Style="{StaticResource ActionButtonStyle}"
                                HorizontalAlignment="Left"
                                Click="SendBugEmail_Click"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="20">
            <Button Content="Đóng"
                    Style="{StaticResource CloseButtonStyle}"
                    HorizontalAlignment="Right"
                    Click="CloseButton_Click"/>
        </Border>
    </Grid>
</Window>