<Window x:Class="BlueBerryDictionary.Views.Dialogs.RemoveTagDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🗑️ Xoá Tag"
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MainBackground}"
        BorderBrush="{DynamicResource BorderColor}"
        BorderThickness="2">

    <Border CornerRadius="16" BorderBrush="{DynamicResource BorderColor}" BorderThickness="2" Padding="20" Margin="10"
            Background="{DynamicResource CardBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="🗑️ Xoá Tag "
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource ButtonColor}"/>
                <TextBlock Text="Chọn các tag muốn xoá. Các từ vẫn được giữ lại."
                           Foreground="{DynamicResource TextColor}"
                           FontSize="14"
                           Opacity="0.8"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="TagsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="4" Padding="10"
                                    Background="{DynamicResource WordItemBackground}"
                                    BorderBrush="{DynamicResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox VerticalAlignment="Center"
                                              Tag="{Binding Id}"
                                              IsChecked="False"
                                              Margin="0,0,12,0"/>
                                    <TextBlock Text="{Binding Icon}" FontSize="18" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding Name}" FontSize="16"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextColor}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="❌ Hủy"
                        Padding="20,10"
                        FontSize="14"
                        Margin="0,0,10,0"
                        Click="Cancel_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource SearchBackground}"/>
                            <Setter Property="Foreground" Value="#DC2626"/>
                            <Setter Property="BorderBrush" Value="#DC2626"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#DC2626"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="DeleteButton"
                        Content="🗑️ Xoá Tag Đã Chọn"
                        Padding="20,10"
                        FontSize="14"
                        Click="Delete_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource ToolButtonActive}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</Window>
