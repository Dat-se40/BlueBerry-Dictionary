<Application x:Class="BlueBerryDictionary.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BlueBerryDictionary"
             xmlns:helpers="clr-namespace:BlueBerryDictionary.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Resources/Styles/ControlStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- ✅ WPF Built-in Converter -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <!-- ✅ Custom Inverse Converter -->
            <helpers:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

            <!-- ✅ THÊM: Global Font Settings -->
            <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>
            <System:Double x:Key="AppFontSize" xmlns:System="clr-namespace:System;assembly=mscorlib">14</System:Double>

            <!-- Global Background Image -->
            <ImageBrush x:Key="AppBackgroundImage" Stretch="UniformToFill" Opacity="0.15">
                <ImageBrush.ImageSource>
                    <x:Null/>
                </ImageBrush.ImageSource>
            </ImageBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>
