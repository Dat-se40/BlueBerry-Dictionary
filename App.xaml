<Application x:Class="BlueBerryDictionary.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BlueBerryDictionary"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/Containers.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/Inputs.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/Themes.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/ColoursStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
